@using Lookup_PMCOMMON.DTOs.LML01700;
@inherits R_Page
@attribute [R_Page(ResourceId = "_CancelReceiptFromCustomer")]
@inject R_ILocalizer<Resources_Dummy_Class_LookupPM> _localizer


<R_StackLayout>
    <R_StackLayout Row>

        <R_ItemLayout col="1">
            <R_Label>
                @_localizer["_period"]*
            </R_Label>
        </R_ItemLayout>
        <R_ItemLayout col="1">
            <R_NumericTextBox @bind-Value="_viewModel._PeriodYear"
                              ThousandSeparator="false"
                              Min="_viewModel._GetInitialProcess.IMIN_YEAR"
                              Max="@_viewModel._GetInitialProcess.IMAX_YEAR"
                              Step="1"
                              TValue="int">
            </R_NumericTextBox>
        </R_ItemLayout>
        <R_ItemLayout col="1">
            <R_DropDownList Data="@_viewModel.GetPeriodMonth"
                            ValueField="@nameof(MonthDTO.Id)"
                            TextField="@nameof( MonthDTO.Id)"
                            Value="_viewModel._PeriodMonth"
                            ValueChanged="@((string value) => ChangePeriodMonth(value))">
            </R_DropDownList>
        </R_ItemLayout>
        <R_ItemLayout col="1">
            <R_Label>
                @_localizer["_customer"]*
            </R_Label>
        </R_ItemLayout>
        <R_ItemLayout col="4">
            <R_StackLayout Row>
                <R_ItemLayout col="5">
                    <R_TextBox @bind-Value="@_viewModel._Parameter.CCUSTOMER_ID"
                               MaxLength="20"
                               OnLostFocus="@OnLostFocusTenant">
                    </R_TextBox>
                </R_ItemLayout>

                <R_ItemLayout>
                    <R_Lookup R_Before_Open_Lookup="@BeforeOpenLookUpTenantLookup"
                              R_After_Open_Lookup="@AfterOpenLookUpTenantLookupAsync">
                        ...
                    </R_Lookup>
                </R_ItemLayout>
                <R_ItemLayout col="5">

                    <R_TextBox @bind-Value="@_viewModel._Parameter.CCUSTOMER_NAME"
                               Enabled="false">
                    </R_TextBox>
                </R_ItemLayout>
            </R_StackLayout>
        </R_ItemLayout>
        <R_ItemLayout col="2">
            <R_TextBox @bind-Value="@_viewModel._Parameter.CLOI_AGRMT_ID"
                       MaxLength="20"
                       OnLostFocus="@OnLostFocus_LookupAgreement">
            </R_TextBox>
        </R_ItemLayout>
        <R_ItemLayout>
            <R_Lookup R_Before_Open_Lookup="@BeforeOpen_lookupAgreement"
                      R_After_Open_Lookup="@AfterOpen_lookupAgreement">
                ...
            </R_Lookup>
        </R_ItemLayout>
        <R_ItemLayout>
            <R_Button OnClick="@BtnRefresh">
                @_localizer["_refresh"]
            </R_Button>
        </R_ItemLayout>
    </R_StackLayout>

    <R_StackLayout Row>
        <R_Grid @ref="@GridReceiptRef"
                DataSource="_viewModel._GetListCancelReceiptFromCustomer"
                R_ServiceGetListRecord="@R_ServiceGetListCancelReceipAsync"
                R_Display="@R_DisplayCancelReceiptAsync"
                R_GridType="@R_eGridType.Original"
                Pageable
                @bind-PageSize="@_pageSizeCancelReceipt"
                Height="250px"
                Width="925px">
            <R_GridColumns>
                <R_GridTextColumn Width="150px"
                                  FieldName="@nameof(LML01700DTO.CDEPT_CODE)"
                                  HeaderText=@_localizer["_Dept."] />
                <R_GridTextColumn Width="175px"
                                  FieldName="@nameof(LML01700DTO.CREF_NO)"
                                  HeaderText=@_localizer["_refNo"] />
                <R_GridDatePickerColumn Width="150px"
                                        FieldName="@nameof(LML01700DTO.DREF_DATE)"
                                        HeaderText=@_localizer["_RefDate"] />
                <R_GridTextColumn Width="150px"
                                  FieldName="@nameof(LML01700DTO.CPAYMENT_TYPE_NAME)"
                                  HeaderText=@_localizer["_type"] />
                <R_GridTextColumn Width="150px"
                                  FieldName="@nameof(LML01700DTO.CCB_CODE)"
                                  HeaderText=@_localizer["_CBCode"] />
                <R_GridTextColumn Width="175px"
                                  FieldName="@nameof(LML01700DTO.CCB_ACCOUNT_NO)"
                                  HeaderText=@_localizer["_CCBAccountNo"] />
                <R_GridTextColumn Width="120px"
                                  FieldName="@nameof(LML01700DTO.CCURRENCY_CODE)"
                                  HeaderText=@_localizer["_curr"] />
                <R_GridNumericColumn Width="200px"
                                     TValue="decimal"
                                     FieldName="@nameof(LML01700DTO.NTRANS_AMOUNT)"
                                     HeaderText=@_localizer["_Amount"] />
                <R_GridTextColumn Width="175px"
                                  FieldName="@nameof(LML01700DTO.CLOI_AGRMT_NO)"
                                  HeaderText=@_localizer["_CLOIAgreement"] />
                <R_GridTextColumn Width="175px"
                                  FieldName="@nameof(LML01700DTO.CUNIT_DESCRIPTION)"
                                  HeaderText=@_localizer["_unitDescription"] />
            </R_GridColumns>
        </R_Grid>
        </R_StackLayout>

        <R_StackLayout Row>
        <R_Label>
            @_localizer["_prerequisiteReceipt"]*
        </R_Label>
    </R_StackLayout>

    <R_StackLayout Row>
        <R_Grid @ref="@GridPrerequisiteRef"
                DataSource="_viewModel._GetListPrerequisiteCustomer"
                R_ServiceGetListRecord="@R_ServiceGetListPrerequisiteAsync"
                R_GridType="@R_eGridType.Original"
                Pageable
                @bind-PageSize="@_pageSizePrerequisite"
                Height="250px"
                Width="925px">
            <R_GridColumns>
                <R_GridTextColumn Width="150px"
                                  FieldName="@nameof(LML01700DTO.CDEPT_CODE)"
                                  HeaderText=@_localizer["_Dept."] />
                <R_GridTextColumn Width="175px"
                                  FieldName="@nameof(LML01700DTO.CREF_NO)"
                                  HeaderText=@_localizer["_refNo"] />
                <R_GridDatePickerColumn Width="150px"
                                        FieldName="@nameof(LML01700DTO.DREF_DATE)"
                                        HeaderText=@_localizer["_RefDate"] />
                <R_GridTextColumn Width="150px"
                                  FieldName="@nameof(LML01700DTO.CPAYMENT_TYPE_NAME)"
                                  HeaderText=@_localizer["_type"] />
                <R_GridTextColumn Width="150px"
                                  FieldName="@nameof(LML01700DTO.CCB_CODE)"
                                  HeaderText=@_localizer["_CBCode"] />
                <R_GridTextColumn Width="175px"
                                  FieldName="@nameof(LML01700DTO.CCB_ACCOUNT_NO)"
                                  HeaderText=@_localizer["_CCBAccountNo"] />
                <R_GridTextColumn Width="120px"
                                  FieldName="@nameof(LML01700DTO.CCURRENCY_CODE)"
                                  HeaderText=@_localizer["_curr"] />
                <R_GridNumericColumn Width="200px"
                                     TValue="decimal"
                                     FieldName="@nameof(LML01700DTO.NTRANS_AMOUNT)"
                                     HeaderText=@_localizer["_Amount"] />
                <R_GridTextColumn Width="175px"
                                  FieldName="@nameof(LML01700DTO.CLOI_AGRMT_NO)"
                                  HeaderText=@_localizer["_CLOIAgreement"] />
                <R_GridTextColumn Width="175px"
                                  FieldName="@nameof(LML01700DTO.CUNIT_DESCRIPTION)"
                                  HeaderText=@_localizer["_unitDescription"] />
            </R_GridColumns>
        </R_Grid>
        </R_StackLayout>

        <R_StackLayout Row Class="justify-content-end">
        <R_ItemLayout xs="2">
            <R_Button OnClick="Button_OnClickOkAsync">
                OK
            </R_Button>
        </R_ItemLayout>
        <R_ItemLayout xs="2">
            <R_Button OnClick="Button_OnClickCloseAsync">
                Cancel
            </R_Button>
        </R_ItemLayout>
    </R_StackLayout>
    </R_StackLayout>

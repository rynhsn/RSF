@attribute [R_Page(Title = "GLTR00100 Print Journal Transaction")]
@inherits R_Page
@inject R_ILocalizer<GLTR00100FrontResources.Resources_Dummy_Class> _localizer

<R_StackLayout Style="width: 800px">
    <R_StackLayout Row>
        <R_ItemLayout col="3">
            <R_Label>@_localizer["_TransType"]</R_Label>
        </R_ItemLayout>
        <R_ItemLayout col="8">
            <R_TextBox @bind-Value="@_viewModel.Data.CTRANSACTION_NAME"
                       Enabled="false">
            </R_TextBox>
        </R_ItemLayout>
    </R_StackLayout>

    <R_StackLayout Row>
        <R_ItemLayout col="3">
            <R_Label>@_localizer["_Dept"]</R_Label>
        </R_ItemLayout>
        <R_ItemLayout col="2">
            <R_TextBox @bind-Value="@_viewModel.Data.CDEPT_CODE"
                       Enabled="false">
            </R_TextBox>
        </R_ItemLayout>
        <R_ItemLayout col="6">
            <R_TextBox @bind-Value="@_viewModel.Data.CDEPT_NAME"
                       Enabled="false">
            </R_TextBox>
        </R_ItemLayout>
    </R_StackLayout>

    <R_StackLayout Row>
        <R_ItemLayout col="3">
            <R_Label>@_localizer["_RefNo"]</R_Label>
        </R_ItemLayout>
        <R_ItemLayout col="8">
            <R_TextBox @bind-Value="@_viewModel.Data.CREF_NO"
                       Enabled="false">
            </R_TextBox>
        </R_ItemLayout>
    </R_StackLayout>

    <R_StackLayout Row>
        <R_ItemLayout col="3">
            <R_Label>@_localizer["_JrnlNo"].</R_Label>
        </R_ItemLayout>
        <R_ItemLayout col="8">
            <R_TextBox @bind-Value="@_viewModel.Data.CTRANS_CODE"
                       Enabled="false">
            </R_TextBox>
        </R_ItemLayout>
    </R_StackLayout>

    <R_StackLayout Row Class="justify-content-end mt-2">
        <R_ItemLayout>
            <R_Button OnClick="Button_OnClickOkAsync">
                @_localizer["_PrintBtn"]
            </R_Button>
        </R_ItemLayout>
    </R_StackLayout>
</R_StackLayout>

<R_Conductor @ref="@JournalTransaction"
             R_ViewModel="@_viewModel"
             R_IsHeader="true" 
             R_ServiceGetRecord="@JournalTransaction_ServiceGetRecord"
             />
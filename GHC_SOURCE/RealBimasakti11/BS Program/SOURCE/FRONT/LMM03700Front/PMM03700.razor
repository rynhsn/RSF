@page "/PMM03700"
@using PMM03700COMMON.DTO_s;
@using PMM03700MODEL;
@using PMM03700COMMON;
@using R_BlazorFrontEnd.Controls.Tab
@inherits R_Page
@attribute [R_Page(ResourceId = "_pageTitleTCG")]


<R_StackLayout Class="my-2" Row>
    <R_ItemLayout col="1">
        <R_Label FontStyle="R_eFontStyle.Bold" FontColor="R_eFontColor.Danger">@_localizer["_lbl_property"].ToUpper()</R_Label>
    </R_ItemLayout>
    <R_ItemLayout col="3">
        <R_ComboBox Data="@_viewTenantClassGrpModel._PropertyList"
                    Value="@_viewTenantClassGrpModel._propertyId"
                    ValueField="@nameof(PropertyDTO.CPROPERTY_ID)"
                    TextField="@nameof(PropertyDTO.CPROPERTY_NAME)"
                    ValueChanged="@((string value) => ComboboxPropertyValueChanged(value))"
                    Enabled="@_comboboxPropertyEnabled">
        </R_ComboBox>
    </R_ItemLayout>
</R_StackLayout>

<R_TabStrip @ref="_tabStrip"
            OnActiveTabIndexChanging="@OnActiveTabIndexChanging">
    <R_TabStripTab Title="@_localizer["_tab_tenant_class_grp"]" id="@nameof(PMM03700)">
        <R_StackLayout>
            <R_Grid @ref="@_gridTenantClassGroupRef"
                    DataSource="@_viewTenantClassGrpModel._TenantClassificationGroupList"
                    Pageable="true"
                    R_ConductorGridSource="@_conTenantClassGroupRef"
                    R_GridType="@R_eGridType.Original"
                    AllowAddNewRow="true"
                    AllowEditRow="true"
                    AllowDeleteRow="true"
                    R_ServiceGetListRecord="@TenantClassGrp_ServiceGetListRecord"
                    Height="520px"
                    R_ServiceGetRecord="@TenantClassGrp_ServiceGetRecord"
                    R_ServiceDelete="@TenantClassGrp_ServiceDelete"
                    R_Validation="@TenantClassGrp_Validation"
                    R_Saving="@TenantClassGrp_Saving"
                    R_ServiceSave="@TenantClassGrp_ServiceSave"
                    R_AfterAdd="@TenantGrp_AfterAdd">
                <R_GridColumns>
                    <R_GridTextColumn FieldName="@nameof(TenantClassificationGroupDTO.CTENANT_CLASSIFICATION_GROUP_ID)" HeaderText="@_localizer["_col_tenant_class_grp_id"]" R_EnableAdd Width="250px"></R_GridTextColumn>
                    <R_GridTextColumn FieldName="@nameof(TenantClassificationGroupDTO.CTENANT_CLASSIFICATION_GROUP_NAME)" HeaderText="@_localizer["_col_tenant_class_grp_name"]" R_EnableAdd R_EnableEdit Width="250px"></R_GridTextColumn>
                    <R_GridTextColumn FieldName="@nameof(TenantClassificationGroupDTO.CUPDATE_BY)" HeaderText="@_localizer["_col_update_by"]" Width="120px"></R_GridTextColumn>
                    <R_GridDateTimePickerColumn FieldName="@nameof(TenantClassificationGroupDTO.DUPDATE_DATE)" HeaderText="@_localizer["_col_update_date"]" Width="130px"></R_GridDateTimePickerColumn>
                    <R_GridTextColumn FieldName="@nameof(TenantClassificationGroupDTO.CCREATE_BY)" HeaderText="@_localizer["_col_create_by"]" Width="120px"></R_GridTextColumn>
                    <R_GridDateTimePickerColumn FieldName="@nameof(TenantClassificationGroupDTO.DCREATE_DATE)" HeaderText="@_localizer["_col_create_date"]" Width="130px"></R_GridDateTimePickerColumn>
                </R_GridColumns>
            </R_Grid>
        </R_StackLayout>
    </R_TabStripTab>

    <R_TabStripTab Title="@_localizer["_tab_tenant_class"]" Id="@nameof(PMM03710)">
        <R_TabPage @ref="@_tabTenantClass"
                   R_Before_Open_TabPage="@R_Before_Open_TabPage"
                   R_TabEventCallback="@R_TabEventCallback">
        </R_TabPage>
    </R_TabStripTab>
</R_TabStrip>

<R_ConductorGrid @ref="@_conTenantClassGroupRef"
                 R_IsHeader="true"
                 R_SetOther="TenantClassGrp_SetOther">
</R_ConductorGrid>

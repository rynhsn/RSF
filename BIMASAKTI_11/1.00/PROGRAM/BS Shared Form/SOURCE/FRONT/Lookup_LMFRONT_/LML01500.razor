@inherits R_Page
@attribute [R_Page(ResourceId = "_SLACategory")]
@inject R_ILocalizer<Resources_Dummy_Class_LookupPM> _localizer

<R_StackLayout Row>
    <R_Grid @ref="@GridRef"
            DataSource="_viewModel.GetList"
            R_ServiceGetListRecord="R_ServiceGetListRecordAsync"
            R_GridType="@R_eGridType.Navigator"
            Pageable
            @bind-PageSize="@_pageSize"
            Height="400px"
            Width="750px">
        <R_GridColumns>
            <R_GridTextColumn Width="200px"
                              FieldName="@nameof(LML01500DTO.CPARENT_CATEGORY_ID_AND_NAME)" HeaderText=@_localizer["_parentCategory"]></R_GridTextColumn>
            <R_GridTextColumn Width="200px"
                              FieldName="@nameof(LML01500DTO.CCATEGORY_ID_AND_NAME)" HeaderText=@_localizer["_category"]></R_GridTextColumn>
            <R_GridTextColumn Width="300px"
                              FieldName="@nameof(LML01500DTO.CNOTES)" HeaderText=@_localizer["_Notes"]></R_GridTextColumn>
        </R_GridColumns>
    </R_Grid>
    </R_StackLayout>

    <R_StackLayout Row Class="justify-content-end">
    <R_ItemLayout xs="2">
        <R_Button OnClick="Button_OnClickOkAsync">
            OK
        </R_Button>
    </R_ItemLayout>
    <R_ItemLayout xs="2">
        <R_Button OnClick="Button_OnClickCloseAsync">
            Cancel
        </R_Button>
    </R_ItemLayout>
</R_StackLayout>
@inherits R_Page
@attribute [R_Page(Title = "Agreement")]
@inject R_ILocalizer<Resources_Dummy_Class_LookupPM> _localizer

<R_StackLayout>

    <R_StackLayout Row>
        <R_Grid @ref="@GridRef"
                DataSource="_viewModelLML00800.AgreementList"
                R_ServiceGetListRecord="R_ServiceGetListRecordAsync"
                R_GridType="@R_eGridType.Navigator"
                Pageable
                PageSize="10"
                Height="300px"
                Width="925px">
            <R_GridColumns>
                <R_GridTextColumn Width="175px"
                                  FieldName="@nameof(LML00800DTO.CDEPT_NAME)"
                                  HeaderText=@_localizer["_Dept"] />
                <R_GridTextColumn Width="200px"
                                  FieldName="@nameof(LML00800DTO.CREF_NO)"
                                  HeaderText=@_localizer["_agreementNo"] />
                <R_GridTextColumn Width="150px"
                                  FieldName="@nameof(LML00800DTO.CTENANT_NAME)"
                                  HeaderText=@_localizer["_cust"] />
                <R_GridTextColumn Width="200px"
                                  FieldName="@nameof(LML00800DTO.CUNIT_DESCRIPTION)"
                                  HeaderText=@_localizer["_unitDescription"] />
                <R_GridTextColumn Width="175px"
                                  FieldName="@nameof(LML00800DTO.CAGREEMENT_STATUS_NAME)"
                                  HeaderText=@_localizer["_agreementStatus"] />
            </R_GridColumns>
        </R_Grid>
        </R_StackLayout>

        <R_StackLayout Row Class="justify-content-end">
        <R_ItemLayout xs="2">
            <R_Button OnClick="Button_OnClickOkAsync">
                OK
            </R_Button>
        </R_ItemLayout>
        <R_ItemLayout xs="2">
            <R_Button OnClick="Button_OnClickCloseAsync">
                Cancel
            </R_Button>
        </R_ItemLayout>
    </R_StackLayout>
    </R_StackLayout>
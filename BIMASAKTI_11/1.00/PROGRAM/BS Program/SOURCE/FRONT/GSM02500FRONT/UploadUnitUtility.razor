@inherits R_Page
@attribute [R_Page(Title = "Upload")]
@using GSM02500COMMON.DTOs.GSM02531

<R_StackLayout Style="width:1000px">

    <R_StackLayout Row>
        <R_ItemLayout col="2">
            <R_Label>@_localizer["_Property"]</R_Label>
        </R_ItemLayout>
        <R_ItemLayout col="2">
            <R_TextBox R_ConductorGridSource="_conGridUploadUnitUtilityRef"
                       Enabled="false"
                       @bind-Value="loUploadUnitUtilityViewModel.loParameter.PropertyData.CPROPERTY_ID">
            </R_TextBox>
        </R_ItemLayout>
        <R_ItemLayout col="8">
            <R_TextBox R_ConductorGridSource="_conGridUploadUnitUtilityRef"
                       Enabled="false"
                       @bind-Value="loUploadUnitUtilityViewModel.loParameter.PropertyData.CPROPERTY_NAME">
            </R_TextBox>
        </R_ItemLayout>
    </R_StackLayout>

    <R_StackLayout hidden=@(!loUploadUnitUtilityViewModel.loParameter.LFLAG)>
        <R_ItemLayout col="12">
            <R_StackLayout Row>
                <R_ItemLayout col="2">
                    <R_Label>@_localizer["_Building"]</R_Label>
                </R_ItemLayout>
                <R_ItemLayout col="2">
                    <R_TextBox R_ConductorGridSource="_conGridUploadUnitUtilityRef"
                               Enabled="false"
                               @bind-Value="loUploadUnitUtilityViewModel.loParameter.BuildingData.CBUILDING_ID">
                    </R_TextBox>
                </R_ItemLayout>
                <R_ItemLayout col="8">
                    <R_TextBox R_ConductorGridSource="_conGridUploadUnitUtilityRef"
                               Enabled="false"
                               @bind-Value="loUploadUnitUtilityViewModel.loParameter.BuildingData.CBUILDING_NAME">
                    </R_TextBox>
                </R_ItemLayout>
            </R_StackLayout>
            <R_StackLayout Row>
                <R_ItemLayout col="2">
                    <R_Label>@_localizer["_Floor"]</R_Label>
                </R_ItemLayout>
                <R_ItemLayout col="2">
                    <R_TextBox R_ConductorGridSource="_conGridUploadUnitUtilityRef"
                               Enabled="false"
                               @bind-Value="loUploadUnitUtilityViewModel.loParameter.FloorData.CFLOOR_ID">
                    </R_TextBox>
                </R_ItemLayout>
                <R_ItemLayout col="8">
                    <R_TextBox R_ConductorGridSource="_conGridUploadUnitUtilityRef"
                               Enabled="false"
                               @bind-Value="loUploadUnitUtilityViewModel.loParameter.FloorData.CFLOOR_NAME">
                    </R_TextBox>
                </R_ItemLayout>
            </R_StackLayout>
            <R_StackLayout Row>
                <R_ItemLayout col="2">
                    <R_Label>@_localizer["_Unit"]</R_Label>
                </R_ItemLayout>
                <R_ItemLayout col="2">
                    <R_TextBox R_ConductorGridSource="_conGridUploadUnitUtilityRef"
                               Enabled="false"
                               @bind-Value="loUploadUnitUtilityViewModel.loParameter.UnitData.CUNIT_ID">
                    </R_TextBox>
                </R_ItemLayout>
                <R_ItemLayout col="8">
                    <R_TextBox R_ConductorGridSource="_conGridUploadUnitUtilityRef"
                               Enabled="false"
                               @bind-Value="loUploadUnitUtilityViewModel.loParameter.UnitData.CUNIT_NAME">
                    </R_TextBox>
                </R_ItemLayout>
            </R_StackLayout>
        </R_ItemLayout>
    </R_StackLayout>

    <R_StackLayout Row hidden=@(loUploadUnitUtilityViewModel.loParameter.LFLAG)>
        <R_ItemLayout col="2">
            <R_Label>@_localizer["_OtherUnit"]</R_Label>
        </R_ItemLayout>
        <R_ItemLayout col="2">
            <R_TextBox R_ConductorGridSource="_conGridUploadUnitUtilityRef"
                       Enabled="false"
                       @bind-Value="loUploadUnitUtilityViewModel.loParameter.OtherUnitData.COTHER_UNIT_ID">
            </R_TextBox>
        </R_ItemLayout>
        <R_ItemLayout col="8">
            <R_TextBox R_ConductorGridSource="_conGridUploadUnitUtilityRef"
                       Enabled="false"
                       @bind-Value="loUploadUnitUtilityViewModel.loParameter.OtherUnitData.COTHER_UNIT_NAME">
            </R_TextBox>
        </R_ItemLayout>
    </R_StackLayout>

    <R_StackLayout Row>
        <R_InputFile OnChange="OnChangeInputFile" Accepts="@accepts"></R_InputFile>
    </R_StackLayout>

    <R_StackLayout>
        <R_StackLayout Row>
            <R_ItemLayout col="12">
                <R_Grid @ref="@_gridUploadUnitUtilityRef"
                        DataSource="@loUploadUnitUtilityViewModel.loUploadUnitUtilityDisplayList"
                        Pageable="true"
                        R_ConductorGridSource="@_conGridUploadUnitUtilityRef"
                        R_GridType="@R_eGridType.Batch"
                        Height="350px"
                        AllowAddNewRow="false"
                        AllowEditRow="false"
                        AllowDeleteRow="false"
                        R_ServiceGetListRecord="@Grid_R_ServiceGetListRecord">
                    <R_GridColumns>
                        <R_GridNumericColumn TValue="int" FieldName=@nameof(UploadUnitUtilityDTO.No) HeaderText="@_localizer["_No"]" Enabled="false" Width="75px"></R_GridNumericColumn>
                        <R_GridTextColumn FieldName=@nameof(UploadUnitUtilityDTO.UtilityType) HeaderText="@_localizer["_UtilityType"]" Enabled="false" Width="150px"></R_GridTextColumn>
                        <R_GridTextColumn FieldName=@nameof(UploadUnitUtilityDTO.SeqNo) HeaderText="@_localizer["_SeqNo"]" Enabled="false" Width="100px"></R_GridTextColumn>
                        <R_GridTextColumn FieldName=@nameof(UploadUnitUtilityDTO.MeterNo) HeaderText="@_localizer["_MeterNo"]" Enabled="false" Width="150px"></R_GridTextColumn>
                        <R_GridTextColumn FieldName=@nameof(UploadUnitUtilityDTO.AliasMeterNo) HeaderText="@_localizer["_BASAliasMeterNo"]" Enabled="false" Width="175px"></R_GridTextColumn>
                        <R_GridNumericColumn TValue="decimal" FieldName=@nameof(UploadUnitUtilityDTO.CalculationFactor) HeaderText="@_localizer["_CalculationFactor"]" Enabled="false" Width="175px"></R_GridNumericColumn>
                        <R_GridNumericColumn TValue="decimal" FieldName=@nameof(UploadUnitUtilityDTO.Capacity) HeaderText="@_localizer["_Capacity(Electricity)"]" Enabled="false" Width="175px"></R_GridNumericColumn>
                        <R_GridNumericColumn TValue="int" FieldName=@nameof(UploadUnitUtilityDTO.MaxResetValue) HeaderText="@_localizer["_MaxResetValue"]" Enabled="false" Width="150px"></R_GridNumericColumn>
                        <R_GridCheckBoxColumn FieldName=@nameof(UploadUnitUtilityDTO.Active) HeaderText="@_localizer["_ActiveFlag"]" Enabled="false" Width="125px"></R_GridCheckBoxColumn>
                        <R_GridTextColumn FieldName=@nameof(UploadUnitUtilityDTO.NonActiveDate) HeaderText="@_localizer["_NonActiveDate"]" Enabled="false" Width="150px"></R_GridTextColumn>
                        <R_GridTextColumn FieldName=@nameof(UploadUnitUtilityDTO.Valid) HeaderText="@_localizer["_Valid"]" Enabled="false" Width="100px"></R_GridTextColumn>
                        <R_GridTextColumn FieldName=@nameof(UploadUnitUtilityDTO.Notes) HeaderText="@_localizer["_Notes"]" Enabled="false" Width="300px"></R_GridTextColumn>
                    </R_GridColumns>
                </R_Grid>
            </R_ItemLayout>
        </R_StackLayout>
        <R_StackLayout Row>
            <R_ItemLayout col="12">
                <R_ProgressBar Label="@loUploadUnitUtilityViewModel.Message" MaxValue="100" Value="@loUploadUnitUtilityViewModel.Percentage"></R_ProgressBar>
            </R_ItemLayout>
        </R_StackLayout>
        <R_StackLayout Row>
            <R_ItemLayout col="8">
                <R_StackLayout Row>
                    <R_ItemLayout col="3">
                        <R_Label>@_localizer["_TotalRows"]</R_Label>
                    </R_ItemLayout>
                    <R_ItemLayout col="2">
                        <R_NumericTextBox @bind-Value="@loUploadUnitUtilityViewModel.SumList"
                                    Arrows="false"
                                   Enabled="false">
                        </R_NumericTextBox>
                    </R_ItemLayout>
                    <R_ItemLayout col="1">
                        <R_Label>@_localizer["_Valid"]</R_Label>
                    </R_ItemLayout>
                    <R_ItemLayout col="2" Class="bg-success">
                        <R_NumericTextBox @bind-Value="@loUploadUnitUtilityViewModel.SumValid"
                                                ReadOnly
                                          Arrows="false"
                                          Enabled="false">
                        </R_NumericTextBox>
                    </R_ItemLayout>
                    <R_ItemLayout col="1">
                        <R_Label>@_localizer["_Invalid"]</R_Label>
                    </R_ItemLayout>
                    <R_ItemLayout col="2" Class="badge bg-danger">
                        <R_NumericTextBox @bind-Value="@loUploadUnitUtilityViewModel.SumInvalid"
                                                ReadOnly
                                          Arrows="false"
                                          Enabled="false">
                        </R_NumericTextBox>
                    </R_ItemLayout>
                </R_StackLayout>
            </R_ItemLayout>
            <R_ItemLayout col="4" hidden="@loUploadUnitUtilityViewModel.VisibleError">
                <R_StackLayout Row Class="justify-content-end">
                    <R_ItemLayout>
                        <R_Button OnClick="OnCancel">
                            @_localizer["_Cancel"]
                        </R_Button>
                        <R_Button OnClick="OnProcess" Enabled="@IsProcessEnabled">
                            @_localizer["_Process"]
                        </R_Button>
                    </R_ItemLayout>
                </R_StackLayout>
            </R_ItemLayout>
                <R_ItemLayout col="4" hidden="@(!loUploadUnitUtilityViewModel.VisibleError)">
                <R_StackLayout Row Class="justify-content-end">
                    <R_ItemLayout>
                        <R_Button OnClick="OnCancel">
                            @_localizer["_Cancel"]
                        </R_Button>
                        <R_Button OnClick="@OnSaveToExcel">
                            @_localizer["_SavetoExcel"]
                        </R_Button>
                    </R_ItemLayout>
                </R_StackLayout>
            </R_ItemLayout>
        </R_StackLayout>
    </R_StackLayout>
</R_StackLayout>
<R_ConductorGrid @ref="@_conGridUploadUnitUtilityRef"
                 R_ViewModel="@loUploadUnitUtilityViewModel"
                 R_IsHeader
                 R_BeforeSaveBatch="@R_BeforeSaveBatch"
                 R_ServiceSaveBatch="@R_ServiceSaveBatch"
                 R_AfterSaveBatch="@R_AfterSaveBatch">
</R_ConductorGrid>
@inherits R_Page
@attribute [R_Page(Title = "Add Image")]
@using GSM02500COMMON.DTOs.GSM02520

<R_StackLayout Style="width:1000px" hidden="@IsInputHidden">
    <R_StackLayout>
        <R_StackLayout Row>
            <R_InputFile OnChange="OnChangeInputFile" Accepts="@accepts"></R_InputFile>
        </R_StackLayout>
    </R_StackLayout>
    <R_StackLayout Row Class="justify-content-end">
        <R_ItemLayout>
            <R_Button OnClick="OnCancel">Cancel</R_Button>
            <R_Button Enabled="@IsFileExist" OnClick="OnOk">Ok</R_Button>
        </R_ItemLayout>
    </R_StackLayout>
</R_StackLayout>
<R_StackLayout Style="width:1000px" hidden="@IsFormHidden">
    <R_StackLayout Row>
        <R_ItemLayout col="1">
            <R_Label>Image*</R_Label>
        </R_ItemLayout>
        <R_ItemLayout col="2">
            <R_TextBox @bind-Value="@loImage.CIMAGE_ID"></R_TextBox>
        </R_ItemLayout>
        <R_ItemLayout col="9">
            <R_TextBox @bind-Value="@loImage.CIMAGE_NAME"></R_TextBox>
        </R_ItemLayout>
    </R_StackLayout>
    <R_StackLayout Row>
        <R_ItemLayout col="1">
            <R_Label>Image</R_Label>
        </R_ItemLayout>
        <R_ItemLayout col="11">
            <R_ImageBox @bind-Value="@loImage.OIMAGE" MaxWidth="200px" MaxHeight="200px"></R_ImageBox>
        </R_ItemLayout>
    </R_StackLayout>

    <R_StackLayout Row Class="justify-content-end">
        <R_ItemLayout>
            <R_Button OnClick="OnCancel">Cancel</R_Button>
            <R_Button OnClick="OnSave">Save</R_Button>
        </R_ItemLayout>
    </R_StackLayout>
</R_StackLayout>
@*
<R_Conductor @ref="@_conGridUploadImageRef"
                 R_IsHeader>
</R_Conductor>
*@
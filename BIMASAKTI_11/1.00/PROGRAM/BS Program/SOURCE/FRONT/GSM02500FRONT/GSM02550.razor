@page "/GSM02550"
@attribute [R_Page(Title = "Users")]
@inherits R_Page
@using GSM02500COMMON.DTOs.GSM02550

<R_StackLayout>
    <R_StackLayout Row>
        <R_ItemLayout col="2">
            <R_Label Class="fw-bold" FontSize="15">@_localizer["_Property"]</R_Label>
        </R_ItemLayout>

        <R_ItemLayout col="3">
            <R_TextBox @bind-Value="@loViewModel.SelectedProperty.CPROPERTY_ID"
                       R_ConductorGridSource="@_conductorRef"
                       Enabled="false">
            </R_TextBox>
        </R_ItemLayout>
        <R_ItemLayout col="7">
            <R_TextBox @bind-Value="@loViewModel.SelectedProperty.CPROPERTY_NAME"
                       R_ConductorGridSource="@_conductorRef"
                       Enabled="false">
            </R_TextBox>
        </R_ItemLayout>
    </R_StackLayout>
</R_StackLayout>

<R_StackLayout Row>
    <R_ItemLayout col="12">
        <R_Grid @ref="@_gridRef"
                DataSource="@loViewModel.loUserPropertyList"
                Pageable="true"
                R_ConductorGridSource="@_conductorRef"
                R_GridType="@R_eGridType.Original"
                AllowAddNewRow="true"
                AllowEditRow="false"
                AllowDeleteRow="true"
                Height="410px"
                R_CellLostFocused="@UserOnLostFocused"
                R_After_Open_Grid_Lookup="@Grid_AfterlookUpUser"
                R_Before_Open_Grid_Lookup="@Grid_BeforelookUpUser"
                R_Display="@Grid_Display"
                R_ServiceGetRecord="@Grid_ServiceGetRecord"
                R_AfterSave="@Grid_AfterSave"
                R_ServiceSave="@Grid_ServiceSave"
                R_Saving="@Grid_SavingUsers"
                R_ServiceDelete="@Grid_ServiceDelete"
                R_ServiceGetListRecord="@Grid_R_ServiceGetListRecord">
            <R_GridColumns>
                <R_GridLookupColumn FieldName=@nameof(GSM02550DTO.CUSER_ID)
                                    R_EnableAdd
                                    Width="150px"
                                    HeaderText="@_localizer["_UserId"]">
                </R_GridLookupColumn>
                <R_GridTextColumn FieldName=@nameof(GSM02550DTO.CUSER_NAME) @ref="@UserPropertyNameRef" Width="350px" HeaderText="@_localizer["_UserName"]"></R_GridTextColumn>
                <R_GridNumericColumn TValue="int" FieldName=@nameof(GSM02550DTO.IUSER_LEVEL) Width="150px" HeaderText="@_localizer["_UserLevel"]" R_EnableAdd></R_GridNumericColumn>
                <R_GridTextColumn FieldName=@nameof(GSM02550DTO.CCREATE_BY) Width="125px" HeaderText="@_localizer["_CreatedBy"]"></R_GridTextColumn>
                <R_GridDateTimePickerColumn FieldName=@nameof(GSM02550DTO.DCREATE_DATE) Width="200px" HeaderText="@_localizer["_CreatedDate"]"></R_GridDateTimePickerColumn>
            </R_GridColumns>
        </R_Grid>
    </R_ItemLayout>
</R_StackLayout>

<R_ConductorGrid @ref="@_conductorRef"
            R_ViewModel="@loViewModel"
            R_IsHeader
            @*
            R_SetOther="Users_SetOther"*@></R_ConductorGrid>
@inherits R_Page
@attribute [R_Page(Title = "Floor")]
@using GSM02500COMMON.DTOs.GSM02500;
@using GSM02500COMMON.DTOs.GSM02520
@using GSM02500COMMON.DTOs;
@using GSM02500MODEL
@using GSM02500MODEL.View_Model;

<R_StackLayout>
    <R_StackLayout Row>
        <R_ItemLayout col="2">
            <R_Label Class="fw-bold" FontSize="15">@_localizer["_Property"]</R_Label>
        </R_ItemLayout>

        <R_ItemLayout col="3">
            <R_TextBox @bind-Value="@loViewModel.SelectedProperty.CPROPERTY_ID"
                       R_ConductorSource="@_conductorRef"
                       Enabled="false">
            </R_TextBox>
        </R_ItemLayout>
        <R_ItemLayout col="7">
            <R_TextBox @bind-Value="@loViewModel.SelectedProperty.CPROPERTY_NAME"
                       R_ConductorSource="@_conductorRef"
                       Enabled="false">
            </R_TextBox>
        </R_ItemLayout>
    </R_StackLayout>
    <R_StackLayout Row>
        <R_ItemLayout col="2">
            <R_Label Class="fw-bold" FontSize="15">@_localizer["_Building"]</R_Label>
        </R_ItemLayout>

        <R_ItemLayout col="3">
            <R_TextBox @bind-Value="@loViewModel.SelectedBuilding.CBUILDING_ID"
                       R_ConductorSource="@_conductorRef"
                       Enabled="false">
            </R_TextBox>
        </R_ItemLayout>
        <R_ItemLayout col="7">
            <R_TextBox @bind-Value="@loViewModel.SelectedBuilding.CBUILDING_NAME"
                       R_ConductorSource="@_conductorRef"
                       Enabled="false">
            </R_TextBox>
        </R_ItemLayout>
    </R_StackLayout>
</R_StackLayout>
        
<R_StackLayout Spacing="3" Row="true">

    @* Lay-Out Table Grid List *@
    <R_ItemLayout col="3">
        <R_Grid @ref="@_gridRef"
                DataSource="@loViewModel.loFloorList"
                R_ConductorSource="@_conductorRef"
                R_GridType="@R_eGridType.Navigator"
                Height="300px"
                R_ServiceGetListRecord="@Grid_R_ServiceGetListRecord">
            <R_GridColumns>
                <R_GridTextColumn FieldName="@nameof(GSM02520DTO.CFLOOR_NAME)" HeaderText="@_localizer["_Floor"]"></R_GridTextColumn>
            </R_GridColumns>
        </R_Grid>
    </R_ItemLayout>
    @* Lay-Out Navigator *@
    <R_ItemLayout col="8">

        <R_StackLayout Row="true" Class="justify-content-end">
            <R_ItemLayout>
                <R_CheckBox @bind-Value="@loViewModel.Data.LACTIVE"
                            R_ConductorSource="@_conductorRef"
                            Enabled="false">
                </R_CheckBox>
                <R_Label>@_localizer["_Active"]</R_Label>
            </R_ItemLayout>
        </R_StackLayout>

        <R_StackLayout Row="true">
            <R_ItemLayout col="2">
                <R_Label>@_localizer["_Floor"]*</R_Label>
            </R_ItemLayout>

            <R_ItemLayout col="3">
                <R_TextBox @bind-Value="@loViewModel.Data.CFLOOR_ID"
                           R_ConductorSource="@_conductorRef"
                           @ref="_floordRef"
                           R_EnableAdd="true"
                           R_EnableEdit="false">
                </R_TextBox>
            </R_ItemLayout>
            <R_ItemLayout col="7">
                <R_TextBox @bind-Value="@loViewModel.Data.CFLOOR_NAME"
                           R_ConductorSource="@_conductorRef"
                           @ref="_floorNameRef"
                           R_EnableAdd="true"
                           R_EnableEdit="true">
                </R_TextBox>
            </R_ItemLayout>
        </R_StackLayout>

        <R_StackLayout Row="true">
            <R_ItemLayout col="2">
                <R_Label>@_localizer["_Description"]</R_Label>
            </R_ItemLayout>
            <R_ItemLayout col="10">
                <R_TextArea @bind-Value="@loViewModel.Data.CDESCRIPTION"
                            R_ConductorSource="@_conductorRef"
                            R_EnableAdd="true" R_EnableEdit="true"></R_TextArea>
            </R_ItemLayout>
        </R_StackLayout>

        <R_StackLayout Row="true">
            <R_ItemLayout col="2">
                <R_Label>@_localizer["_TotalFloorSpace"]</R_Label>
            </R_ItemLayout>

            <R_ItemLayout col="3">
                <R_NumericTextBox @bind-Value="@loViewModel.Data.NGROSS_AREA_SIZE"
                                  R_ConductorSource="@_conductorRef"
                                  R_EnableAdd="true" R_EnableEdit="true">
                </R_NumericTextBox>
            </R_ItemLayout>

            <R_ItemLayout col="1">
                <R_Label FontStyle="R_eFontStyle.Italic">@lcCUOMLabel</R_Label>
            </R_ItemLayout>
            <R_ItemLayout col="2">
                <R_Label>@_localizer["_OccupiableArea"]</R_Label>
            </R_ItemLayout>

            <R_ItemLayout col="3">
                <R_NumericTextBox @bind-Value="@loViewModel.Data.NOCCUPIABLE_AREA_SIZE"
                                  R_ConductorSource="@_conductorRef"
                                  R_EnableAdd="true" R_EnableEdit="true">
                </R_NumericTextBox>
            </R_ItemLayout>
            <R_ItemLayout col="1">
                <R_Label FontStyle="R_eFontStyle.Italic">@lcCUOMLabel</R_Label>
            </R_ItemLayout>
        </R_StackLayout>
        
        <R_StackLayout Row="true">
            <R_ItemLayout col="6">
                <R_Label></R_Label>
            </R_ItemLayout>

            <R_ItemLayout col="2" Class="ms-2">
                <R_Label>@_localizer["_CommonArea"]</R_Label>
            </R_ItemLayout>

            <R_ItemLayout col="3">
                <R_NumericTextBox @bind-Value="@loViewModel.Data.NTOTAL_OCCUPIABLE"
                                  R_ConductorSource="@_conductorRef"
                                  Enabled="false">
                </R_NumericTextBox>
            </R_ItemLayout>
            <R_ItemLayout col="1">
                <R_Label FontStyle="R_eFontStyle.Italic">@lcCUOMLabel</R_Label>
            </R_ItemLayout>
        </R_StackLayout>

        <R_StackLayout Row="true">
            <R_Label FontColor="R_eFontColor.Danger" FontSize="12">@_localizer["_UnitDefault"]</R_Label>
        </R_StackLayout>

        <R_StackLayout Row="true">
            <R_ItemLayout col="2">
                <R_Label>@_localizer["_UnitType"]</R_Label>
            </R_ItemLayout>

            <R_ItemLayout col="3">
                <R_ComboBox Data="@loViewModel.loUnitTypeList"
                                @bind-Value="loViewModel.Data.CDEFAULT_UNIT_TYPE_ID"
                                ValueField="@nameof(GetUnitTypeDTO.CUNIT_TYPE_ID)"
                                TextField="@nameof(GetUnitTypeDTO.CUNIT_TYPE_NAME)"
                                PopupMaxHeight="150px"
                                R_ConductorSource="@_conductorRef"
                                R_EnableAdd="true" R_EnableEdit="true">
                </R_ComboBox>
            </R_ItemLayout>
        </R_StackLayout>

        <R_StackLayout Row="true">
            <R_ItemLayout col="2">
                <R_Label>@_localizer["_UnitCategory"]</R_Label>
            </R_ItemLayout>

            <R_ItemLayout col="8">
                <R_RadioGroup Data="@loViewModel.loUnitCategoryList"
                              @bind-Value="@loViewModel.Data.CDEFAULT_UNIT_CATEGORY_ID"
                              ValueField="@nameof(GetUnitCategoryDTO.CCODE)"
                              TextField="@nameof(GetUnitCategoryDTO.CDESCRIPTION)"
                              R_ConductorSource="@_conductorRef"
                              R_EnableAdd="true" R_EnableEdit="true"></R_RadioGroup>
            </R_ItemLayout>
        </R_StackLayout>

        <R_StackLayout Row="true">
            <R_Label FontColor="R_eFontColor.Danger" FontSize="12">Unit Info</R_Label>
        </R_StackLayout>




        <R_StackLayout Row="true">
            <R_ItemLayout col="2">
                <R_Label>@_localizer["_TotalUnit"]</R_Label>
            </R_ItemLayout>

            <R_ItemLayout col="3">
                <R_NumericTextBox @bind-Value="@loViewModel.Data.NTOTAL_UNIT"
                                  R_ConductorSource="@_conductorRef"
                                  Enabled="false">
                </R_NumericTextBox>
            </R_ItemLayout>

            <R_ItemLayout col="2">
            </R_ItemLayout>
            <R_ItemLayout col="1">
                <R_Label>@_localizer["_Active"]</R_Label>
            </R_ItemLayout>

            <R_ItemLayout col="3">
                <R_NumericTextBox @bind-Value="@loViewModel.Data.NTOTAL_ACTIVE_UNIT"
                                  R_ConductorSource="@_conductorRef"
                                  Enabled="false">
                </R_NumericTextBox>
            </R_ItemLayout>
        </R_StackLayout>

        <R_StackLayout Row="true">
            <R_ItemLayout col="2">
                <R_Label>@_localizer["_TotalUnitSpace"]</R_Label>
            </R_ItemLayout>

            <R_ItemLayout col="3">
                <R_NumericTextBox @bind-Value="@loViewModel.Data.NTOTAL_UNIT_SPACE"
                                  R_ConductorSource="@_conductorRef"
                                  Enabled="false">
                </R_NumericTextBox>
            </R_ItemLayout>
            <R_Label FontStyle="R_eFontStyle.Italic">@lcCUOMLabel</R_Label>
        </R_StackLayout>

        <R_StackLayout Row="true">
            <R_ItemLayout col="2">
                <R_Label>@_localizer["_EmptySpace"]</R_Label>
            </R_ItemLayout>

            <R_ItemLayout col="3">
                <R_NumericTextBox @bind-Value="@loViewModel.Data.NTOTAL_EMPTY_SPACE"
                                  R_ConductorSource="@_conductorRef"
                                  Enabled="false">
                </R_NumericTextBox>
            </R_ItemLayout>
            <R_Label FontStyle="R_eFontStyle.Italic">@lcCUOMLabel</R_Label>
        </R_StackLayout>

        <R_StackLayout Row="true">
            <R_ItemLayout col="2">
                <R_Label>@_localizer["_UpdatedBy"]</R_Label>
            </R_ItemLayout>
            <R_ItemLayout col="4">
                <R_TextBox @bind-Value="@loViewModel.Data.CUPDATE_BY"
                           R_ConductorSource="@_conductorRef"
                           Enabled="false"></R_TextBox>
            </R_ItemLayout>
            <R_ItemLayout col="1">
            </R_ItemLayout>
            <R_ItemLayout col="1">
                <R_Label>@_localizer["_Date"]</R_Label>
            </R_ItemLayout>
            <R_ItemLayout col="4">
                <R_DateTimePicker @bind-Value="@loViewModel.Data.DUPDATE_DATE"
                                  R_ConductorSource="@_conductorRef"
                                  ShowPickerButton="false"
                                  Enabled="false"></R_DateTimePicker>
            </R_ItemLayout>
        </R_StackLayout>

        <R_StackLayout Row="true">
            <R_ItemLayout col="2">
                <R_Label>@_localizer["_CreatedBy"]</R_Label>
            </R_ItemLayout>
            <R_ItemLayout col="4">
                <R_TextBox @bind-Value="@loViewModel.Data.CCREATE_BY"
                           R_ConductorSource="@_conductorRef"
                           Enabled="false"></R_TextBox>
            </R_ItemLayout>
            <R_ItemLayout col="1">
            </R_ItemLayout>
            <R_ItemLayout col="1">
                <R_Label>@_localizer["_Date"]</R_Label>
            </R_ItemLayout>
            <R_ItemLayout col="4">
                <R_DateTimePicker @bind-Value="@loViewModel.Data.DCREATE_DATE"
                                  R_ConductorSource="@_conductorRef"
                                  ShowPickerButton="false"
                                  Enabled="false"></R_DateTimePicker>
            </R_ItemLayout>
        </R_StackLayout>


    </R_ItemLayout>


</R_StackLayout>

<R_StackLayout Row Class="justify-content-between">
    <R_ItemLayout>
        <R_AddButton R_Conductor="@_conductorRef"></R_AddButton>
        <R_EditButton R_Conductor="@_conductorRef"></R_EditButton>
        <R_DeleteButton R_Conductor="@_conductorRef"></R_DeleteButton>
    </R_ItemLayout>
    <R_ItemLayout>
        <R_Button R_ConductorSource="@_conductorRef" R_EnableOther OnClick="OnClickTemplate">@_localizer["_Template"]</R_Button>
        <R_Popup R_ConductorSource="@_conductorRef" 
                 R_EnableOther
                 R_Before_Open_Popup="Before_Open_Upload_Popup"
                 R_After_Open_Popup="After_Open_Upload_Popup">@_localizer["_Upload"]</R_Popup>
        <R_Popup R_ConductorSource="@_conductorRef"
                 R_Before_Open_Popup="@R_Before_Open_Popup_ActivateInactive"
                 R_After_Open_Popup="@R_After_Open_Popup_ActivateInactive"
                 Enabled="IsFloorListExist">@loLabel</R_Popup>
        <R_Detail R_ConductorSource="_conductorRef"
                  R_Before_Open_Detail="R_Before_OpenUnit_Detail"
                  R_After_Open_Detail="R_After_OpenUnit_Detail"
                  Enabled="IsFloorListExist">@_localizer["_Unit"]</R_Detail>
    </R_ItemLayout>
    <R_ItemLayout>
        <R_CancelButton R_Conductor="@_conductorRef"></R_CancelButton>
        <R_SaveButton R_Conductor="@_conductorRef"></R_SaveButton>
    </R_ItemLayout>
</R_StackLayout>

<R_Conductor @ref="@_conductorRef"
             R_ViewModel="@loViewModel"
             R_Display="Grid_Display"
             R_ServiceSave="@Grid_ServiceSave"
             R_AfterAdd="Grid_AfterAdd"@*
             R_BeforeEdit="Grid_BeforeEdit"*@
             R_SetEdit="Grid_SetEdit"
             R_BeforeCancel="Grid_BeforeCancel"
             R_Saving="Grid_SavingFloor"
             R_Validation="Grid_ValidationFloor"
             R_ServiceDelete="@Grid_ServiceDelete"
             R_AfterDelete="Grid_AfterDelete"
             R_IsHeader="true"
             R_ServiceGetRecord="@Grid_ServiceGetRecord">
</R_Conductor>



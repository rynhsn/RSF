@page "/PMB00300ViewPopup"
@using PMB00300FrontResources
@using PMB00300Common.DTOs
@inherits R_Page
@attribute [R_Page(Title = "")];
@inject R_ILocalizer<Resources_Dummy_Class> _localizer

<R_StackLayout Row>
    <R_ItemLayout col="6">
        <R_StackLayout Spacing="0">
            <R_ItemLayout>
                <R_Label FontStyle="R_eFontStyle.Bold">@_viewModel.Header.CPROPERTY_NAME</R_Label>
            </R_ItemLayout>
            <R_ItemLayout>
                <R_Label FontStyle="R_eFontStyle.Bold">@_viewModel.Header.CBUILDING_NAME</R_Label>
            </R_ItemLayout>
            <R_ItemLayout>
                <R_Label FontStyle="R_eFontStyle.Bold">@(_viewModel.Header.CFLOOR_NAME + ", " + _viewModel.Header.CUNIT_NAME)</R_Label>
            </R_ItemLayout>
        </R_StackLayout>
    </R_ItemLayout>
    <R_ItemLayout>
        <R_StackLayout Spacing="0" Class="text-end">
            <R_ItemLayout>
                <R_Label FontStyle="R_eFontStyle.Bold">@_viewModel.Header.CTENANT_NAME</R_Label>
            </R_ItemLayout>
            <R_ItemLayout>
                <R_Label FontStyle="R_eFontStyle.Bold">@_viewModel.Header.CDEPT_NAME</R_Label>
            </R_ItemLayout>
            <R_ItemLayout>
                <R_Label FontStyle="R_eFontStyle.Bold">@_localizer["LOI_REF_NO"] : @_viewModel.Header.CREF_NO</R_Label>
            </R_ItemLayout>
        </R_StackLayout>
    </R_ItemLayout>
</R_StackLayout>

<R_StackLayout Row Class="mb-2">
    <R_ItemLayout col="6">
        <R_StackLayout Row>
            <R_ItemLayout col="5">
                <R_StackLayout Row>
                    <R_ItemLayout col="6">
                        <R_Label>@_localizer["GROSS_SIZE"] Size</R_Label>
                    </R_ItemLayout>
                    <R_ItemLayout col="5">
                        <R_NumericTextBox Value="@_viewModel.Header.NGROSS_AREA_SIZE" Arrows="false" TextAlignment="R_eTextAlignment.Right" Enabled="false"/>
                    </R_ItemLayout>
                </R_StackLayout>
                <R_StackLayout Row>
                    <R_ItemLayout col="6">
                        <R_Label>@_localizer["NET_SIZE"] Size</R_Label>
                    </R_ItemLayout>
                    <R_ItemLayout col="5">
                        <R_NumericTextBox Value="@_viewModel.Header.NNET_AREA_SIZE" Arrows="false" TextAlignment="R_eTextAlignment.Right" Enabled="false"/>
                    </R_ItemLayout>
                </R_StackLayout>
                <R_StackLayout Row>
                    <R_ItemLayout col="6">
                        <R_Label>@_localizer["ACTUAL_SIZE"] Size</R_Label>
                    </R_ItemLayout>
                    <R_ItemLayout col="5">
                        <R_NumericTextBox Value="@_viewModel.Header.NACTUAL_AREA_SIZE" Arrows="false" TextAlignment="R_eTextAlignment.Right" Enabled/>
                    </R_ItemLayout>
                </R_StackLayout>
            </R_ItemLayout>
            <R_ItemLayout col="5">
                <R_GroupBox ShowBorder Title="Hand Over" Class="p-1">
                    <R_StackLayout Row>
                        <R_ItemLayout col="5">
                            <R_Label>@_localizer["PLAN_DATE"] Date</R_Label>
                        </R_ItemLayout>
                        <R_ItemLayout>
                            <R_DateInput Value="@_viewModel.Header.DHO_PLAN_DATE" Enabled="false"/>
                        </R_ItemLayout>
                    </R_StackLayout>
                    <R_StackLayout Row>
                        <R_ItemLayout col="5">
                            <R_Label>@_localizer["ACTUAL_DATE"] Date</R_Label>
                        </R_ItemLayout>
                        <R_ItemLayout>
                            <R_DateInput Value="@_viewModel.Header.DHO_ACTUAL_DATE" Enabled="false"/>
                        </R_ItemLayout>
                    </R_StackLayout>
                </R_GroupBox>
            </R_ItemLayout>
        </R_StackLayout>
    </R_ItemLayout>
    <R_ItemLayout>
        <R_StackLayout Row>
            <R_ItemLayout col="3">
                <R_Label>@_localizer["TENURE"]</R_Label>
            </R_ItemLayout>
            <R_ItemLayout col="5">
                <R_StackLayout Row>
                    <R_ItemLayout col="5">
                        <R_NumericTextBox Value="@_viewModel.Header.IYEARS" Arrows="false" Decimals="0" Enabled="false"/>
                    </R_ItemLayout>
                    <R_ItemLayout>
                        <R_Label>@_localizer["YEAR"]</R_Label>
                    </R_ItemLayout>
                </R_StackLayout>
                <R_StackLayout Row>
                    <R_ItemLayout col="5">
                        <R_NumericTextBox Value="@_viewModel.Header.IMONTHS" Arrows="false" Decimals="0" Enabled="false"/>
                    </R_ItemLayout>
                    <R_ItemLayout>
                        <R_Label>@_localizer["MONTH"]</R_Label>
                    </R_ItemLayout>
                </R_StackLayout>
                <R_StackLayout Row>
                    <R_ItemLayout col="5">
                        <R_NumericTextBox Value="@_viewModel.Header.IDAYS" Arrows="false" Decimals="0" Enabled="false"/>
                    </R_ItemLayout>
                    <R_ItemLayout>
                        <R_Label>@_localizer["DAY"]</R_Label>
                    </R_ItemLayout>
                </R_StackLayout>
            </R_ItemLayout>
        </R_StackLayout>
    </R_ItemLayout>
</R_StackLayout>

<R_StackLayout Class="mb-2">
    <R_ItemLayout>
        <R_Grid @ref="_gridRefCharges"
                DataSource="_viewModel.GridChargesList"
                R_ConductorGridSource="_conductorRefCharges"
                R_GridType="R_eGridType.Original"
                R_ServiceGetListRecord="GetChargesListRecord"
                AllowAddNewRow="false"
                AllowEditRow="false"
                AllowDeleteRow="false"
                Pageable
                PageSize="4"
                Width="1300px"
                Height="160px">
            <R_GridColumns>
                <R_GridTextColumn FieldName="@nameof(PMB00300RecalcChargesDTO.CSEQ_NO)" HeaderText="@_localizer["SEQ_NO"]" TextAlignment="R_eTextAlignment.Left" Width="100px"/>
                <R_GridTextColumn FieldName="@nameof(PMB00300RecalcChargesDTO.CCHARGES_TYPE_NAME)" HeaderText="@_localizer["CHARGES_TYPE"]" TextAlignment="R_eTextAlignment.Left" Width="150px"/>
                <R_GridTextColumn FieldName="@nameof(PMB00300RecalcChargesDTO.CCHARGES_NAME)" HeaderText="@_localizer["CHARGES"]" TextAlignment="R_eTextAlignment.Left" Width="150px"/>
                <R_GridDatePickerColumn FieldName="@nameof(PMB00300RecalcChargesDTO.DSTART_DATE)" HeaderText="@_localizer["START_DATE"]" Width="120px"/>
                <R_GridDatePickerColumn FieldName="@nameof(PMB00300RecalcChargesDTO.DEND_DATE)" HeaderText="@_localizer["END_DATE"]" Width="120px"/>
                <R_GridNumericColumn TValue="Int32" FieldName="@nameof(PMB00300RecalcChargesDTO.IINTERVAL)" HeaderText="@_localizer["INTERVAL"]" Width="100px"/>
                <R_GridTextColumn FieldName="@nameof(PMB00300RecalcChargesDTO.CPERIOD_MODE_DESCRIPTION)" HeaderText="@_localizer["PERIOD_MODE"]" TextAlignment="R_eTextAlignment.Left" Width="150px"/>
                <R_GridNumericColumn TValue="decimal" FieldName="@nameof(PMB00300RecalcChargesDTO.NBASE_AMOUNT)" HeaderText="@_localizer["BASE_RENT"]" Width="130px"/>
                <R_GridNumericColumn TValue="decimal" FieldName="@nameof(PMB00300RecalcChargesDTO.NMONTHLY_AMOUNT)" HeaderText="@_localizer["MONTHLY_AMOUNT"]" Width="150px"/>
                <R_GridNumericColumn TValue="decimal" FieldName="@nameof(PMB00300RecalcChargesDTO.NTOTAL_AMOUNT)" HeaderText="@_localizer["TOTAL_AMOUNT"]" Width="150px"/>
                <R_GridTextColumn FieldName="@nameof(PMB00300RecalcChargesDTO.CUPDATE_BY)" HeaderText="@_localizer["UPDATED_BY"]" TextAlignment="R_eTextAlignment.Left" Width="120px"/>
                <R_GridDateTimePickerColumn FieldName="@nameof(PMB00300RecalcChargesDTO.DUPDATE_DATE)" HeaderText="@_localizer["UPDATED_DATE"]" Width="150px"/>
                <R_GridTextColumn FieldName="@nameof(PMB00300RecalcChargesDTO.CCREATE_BY)" HeaderText="@_localizer["CREATED_BY"]" TextAlignment="R_eTextAlignment.Left" Width="120px"/>
                <R_GridDateTimePickerColumn FieldName="@nameof(PMB00300RecalcChargesDTO.DCREATE_DATE)" HeaderText="@_localizer["CREATED_DATE"]" Width="150px"/>
            </R_GridColumns>
        </R_Grid>
    </R_ItemLayout>
</R_StackLayout>


<R_StackLayout Class="mb-2">
    <R_ItemLayout>
        <R_Grid @ref="_gridRefRule"
                DataSource="_viewModel.GridRuleList"
                R_ConductorGridSource="_conductorRefRule"
                R_GridType="R_eGridType.Original"
                R_ServiceGetListRecord="GetRuleListRecord"
                AllowAddNewRow="false"
                AllowEditRow="false"
                AllowDeleteRow="false"
                Pageable
                PageSize="4"
                Width="1300px"
                Height="190px">
            <R_GridColumns>
                <R_GridTextColumn FieldName="@nameof(PMB00300RecalcRuleDTO.CSEQ_NO)" HeaderText="@_localizer["SEQ_NO"]" Width="100px" TextAlignment="R_eTextAlignment.Left"/>
                <R_GridDatePickerColumn FieldName="@nameof(PMB00300RecalcRuleDTO.DSTART_DATE)" HeaderText="@_localizer["START_DATE"]" Width="120px"/>
                <R_GridDatePickerColumn FieldName="@nameof(PMB00300RecalcRuleDTO.DEND_DATE)" HeaderText="@_localizer["END_DATE"]" Width="120px"/>
                <R_GridTextColumn FieldName="@nameof(PMB00300RecalcRuleDTO.CPERIOD)" HeaderText="@_localizer["PERIOD"]" Width="120px" TextAlignment="R_eTextAlignment.Left"/>
                <R_GridMultiHeaderColumn HeaderText="@_localizer["BEFORE"]">
                    <R_GridNumericColumn TValue="decimal" FieldName="@nameof(PMB00300RecalcRuleDTO.NAMOUNT_BEFORE)" HeaderText="@_localizer["AMOUNT"]" Width="130px"/>
                    <R_GridNumericColumn TValue="decimal" FieldName="@nameof(PMB00300RecalcRuleDTO.NTAX_AMOUNT_BEFORE)" HeaderText="@_localizer["TAX_AMOUNT"]" Width="130px"/>
                    <R_GridNumericColumn TValue="decimal" FieldName="@nameof(PMB00300RecalcRuleDTO.NAFTER_TAX_AMOUNT_BEFORE)" HeaderText="@_localizer["AFTER_TAX_AMOUNT"]" Width="150px"/>
                    <R_GridNumericColumn TValue="decimal" FieldName="@nameof(PMB00300RecalcRuleDTO.NBOOKING_AMOUNT_BEFORE)" HeaderText="@_localizer["BOOKING_AMOUNT"]" Width="150px"/>
                    <R_GridNumericColumn TValue="decimal" FieldName="@nameof(PMB00300RecalcRuleDTO.NTOTAL_AMOUNT_BEFORE)" HeaderText="@_localizer["TOTAL_AMOUNT"]" Width="130px"/>
                </R_GridMultiHeaderColumn>
                <R_GridMultiHeaderColumn HeaderText="@_localizer["AFTER"]">
                    <R_GridNumericColumn TValue="decimal" FieldName="@nameof(PMB00300RecalcRuleDTO.NAMOUNT_AFTER)" HeaderText="@_localizer["AMOUNT"]" Width="120px"/>
                    <R_GridNumericColumn TValue="decimal" FieldName="@nameof(PMB00300RecalcRuleDTO.NTAX_AMOUNT_AFTER)" HeaderText="@_localizer["TAX_AMOUNT"]" Width="130px"/>
                    <R_GridNumericColumn TValue="decimal" FieldName="@nameof(PMB00300RecalcRuleDTO.NAFTER_TAX_AMOUNT_AFTER)" HeaderText="@_localizer["AFTER_TAX_AMOUNT"]" Width="150px"/>
                    <R_GridNumericColumn TValue="decimal" FieldName="@nameof(PMB00300RecalcRuleDTO.NBOOKING_AMOUNT_AFTER)" HeaderText="@_localizer["BOOKING_AMOUNT"]" Width="150px"/>
                    <R_GridNumericColumn TValue="decimal" FieldName="@nameof(PMB00300RecalcRuleDTO.NTOTAL_AMOUNT_AFTER)" HeaderText="@_localizer["TOTAL_AMOUNT"]" Width="130px"/>
                </R_GridMultiHeaderColumn>
            </R_GridColumns>
        </R_Grid>
    </R_ItemLayout>
</R_StackLayout>

<R_StackLayout>
    <R_ItemLayout>
        <R_Button OnClick="OnClickProcess">@_localizer["PROCESS"]</R_Button>
    </R_ItemLayout>
</R_StackLayout>


<R_ConductorGrid @ref="@_conductorRefCharges"
             R_ViewModel="_viewModel"
            R_IsHeader/>

<R_ConductorGrid @ref="@_conductorRefRule"
            R_ConductorParent="@_conductorRefCharges"/>


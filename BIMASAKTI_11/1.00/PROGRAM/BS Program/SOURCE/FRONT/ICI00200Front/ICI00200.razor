@page "/ICI00200"
@using ICI00200Common.DTOs
@using ICI00200FrontResources
@inherits R_Page
@attribute [R_Page(Title = "Product Inquiry")]
@inject R_ILocalizer<Resources_Dummy_Class> _localizer

<R_StackLayout Row Class="mb-1">
    <R_ItemLayout col="1">
        <R_Label>@_localizer["Category"]</R_Label>
    </R_ItemLayout>
    <R_ItemLayout col="2">
        <R_TextBox @bind-Value="@_viewModel.SelectedCategoryId" OnLostFocus="OnLostFocusLookupCategory" Enabled/>
    </R_ItemLayout>
    <R_ItemLayout>
        <R_Lookup R_Before_Open_Lookup="BeforeCategoryLookup" R_After_Open_Lookup="AfterCategoryLookup" Enabled>...</R_Lookup>
    </R_ItemLayout>
    <R_ItemLayout col="3">
        <R_TextBox @bind-Value="@_viewModel.SelectedCategoryName" Enabled="false"/>
    </R_ItemLayout>
</R_StackLayout>

<R_StackLayout>
    <R_ItemLayout>
        <R_Grid @ref="@_gridRef"
                DataSource="@_viewModel.GridList"
                R_ConductorSource="_conductorRef"
                Pageable
                PageSize="16"
                R_GridType="@R_eGridType.Navigator"
                R_ServiceGetListRecord="@ServiceGetListRecord"
                AllowDeleteRow="false"
                AllowEditRow="false"
                AllowAddNewRow="false"
                Height="390px"
                Width="100%">
            <R_GridColumns>
                <R_GridTextColumn FieldName="@nameof(ICI00200ProductDTO.CPRODUCT_ID)" HeaderText="@_localizer["ProductId"]" Width="200px" TextAlignment="R_eTextAlignment.Left"/>
                <R_GridTextColumn FieldName="@nameof(ICI00200ProductDTO.CPRODUCT_NAME)" HeaderText="@_localizer["ProductName"]" Width="200px" TextAlignment="R_eTextAlignment.Left"/>
                <R_GridNumericColumn TValue="decimal" FieldName="@nameof(ICI00200ProductDTO.NQTY_HAND)" HeaderText="@_localizer["QtyOnHand"]" Width="200px" Decimals="2"/>
            </R_GridColumns>
        </R_Grid>
    </R_ItemLayout>
</R_StackLayout>

<R_StackLayout Row>
    <R_ItemLayout col="9">

        <R_StackLayout Row Class="mb-1">
            <R_ItemLayout col="2">
                <R_Label>@_localizer["JournalGroup"]</R_Label>
            </R_ItemLayout>
            <R_ItemLayout col="3">
                <R_TextBox @bind-Value="_viewModel.Data.CJRNGRP_CODE" Enabled="false"/>
            </R_ItemLayout>
            <R_ItemLayout col="6">
                <R_TextBox @bind-Value="_viewModel.Data.CJRNGRP_NAME" Enabled="false"/>
            </R_ItemLayout>
        </R_StackLayout>

        <R_StackLayout Row Class="mb-1">
            <R_ItemLayout col="2">
                <R_Label>@_localizer["Unit"]</R_Label>
            </R_ItemLayout>
            
            <R_ItemLayout col="3">
                <R_StackLayout Row>
                    <R_ItemLayout col="6">
                        <R_NumericTextBox Value="1" TextAlignment="R_eTextAlignment.Right" Arrows="false" Decimals="0" Enabled="false"/>
                    </R_ItemLayout>
                    <R_ItemLayout col="6" Class="pe-1">
                        <R_TextBox @bind-Value="_viewModel.Data.CUNIT3" Enabled="false"/>
                    </R_ItemLayout>
                </R_StackLayout>
            </R_ItemLayout> 
            
            <R_ItemLayout col="3">
                <R_StackLayout Row>
                    <R_ItemLayout>
                        <R_Label>=</R_Label>
                    </R_ItemLayout>
                    <R_ItemLayout col="6">
                        <R_NumericTextBox @bind-Value="_viewModel.Data.NCONV_FACTOR2" TextAlignment="R_eTextAlignment.Right" Arrows="false" Decimals="2" Enabled="false"/>
                    </R_ItemLayout>
                    <R_ItemLayout col="5">
                        <R_TextBox @bind-Value="_viewModel.Data.CUNIT2" Enabled="false"/>
                    </R_ItemLayout>
                </R_StackLayout>
            </R_ItemLayout>
            
            <R_ItemLayout col="3">
                <R_StackLayout Row>
                    <R_ItemLayout>
                        <R_Label>=</R_Label>
                    </R_ItemLayout>
                    <R_ItemLayout col="6">
                        <R_NumericTextBox @bind-Value="_viewModel.Data.NCONV_FACTOR1" TextAlignment="R_eTextAlignment.Right" Arrows="false" Decimals="2" Enabled="false"/>
                    </R_ItemLayout>
                    <R_ItemLayout>
                        <R_Label>=</R_Label>
                    </R_ItemLayout>
                    <R_ItemLayout col="5" Class="pe-3">
                        <R_TextBox @bind-Value="_viewModel.Data.CUNIT1" Enabled="false"/>
                    </R_ItemLayout>
                </R_StackLayout>
            </R_ItemLayout>
        </R_StackLayout>

        <R_StackLayout Row Class="mb-1">
            <R_ItemLayout col="2">
                <R_Label>@_localizer["PurchaseUnit"]</R_Label>
            </R_ItemLayout>
            <R_ItemLayout col="2">
                <R_TextBox @bind-Value="_viewModel.Data.CPURCHASE_UNIT" Enabled="false"/>
            </R_ItemLayout>
        </R_StackLayout>

        <R_StackLayout Row Class="mb-1">
            @* <R_ItemLayout col="1"> *@
            @*     <R_Label>@_localizer["UnitCost"]</R_Label> *@
            @* </R_ItemLayout> *@
            @* <R_ItemLayout col="2"> *@
            @*     <R_NumericTextBox @bind-Value="_viewModel.Data.NUNIT_COST" TextAlignment="R_eTextAlignment.Right" Arrows="false" Decimals="2" Enabled="false"/> *@
            @* </R_ItemLayout> *@


            <R_ItemLayout col="2">
                <R_Label>@_localizer["LeadTime"]</R_Label>
            </R_ItemLayout>
            <R_ItemLayout col="1">
                <R_NumericTextBox @bind-Value="_viewModel.Data.ILEAD_TIME" TextAlignment="R_eTextAlignment.Right" Arrows="false" Decimals="2" Enabled="false"/>
            </R_ItemLayout>
            <R_ItemLayout>
                <R_Label>@_localizer["Day"]</R_Label>
            </R_ItemLayout>
        </R_StackLayout>

        <R_StackLayout Row Class="mb-3">
            <R_ItemLayout col="2">
                <R_Label>@_localizer["ProductDesc"]</R_Label>
            </R_ItemLayout>
            <R_ItemLayout col="9">
                <R_TextArea Height="50px" @bind-Value="_viewModel.Data.CPRODUCT_DESC" Enabled="false"/>
            </R_ItemLayout>
        </R_StackLayout>

    </R_ItemLayout>
    
    <R_ItemLayout col="3">
        <R_ImageBox Value="_viewModel.Data.OIMAGE" MaxWidth="170px" MaxHeight="100%"/>
    </R_ItemLayout>
</R_StackLayout>

<R_StackLayout Row>
    <R_ItemLayout>
        <R_Popup R_Before_Open_Popup="BeforeDeptPopup" Enabled="@(!string.IsNullOrEmpty(_viewModel.Data.CPRODUCT_ID))">@_localizer["Dept"]</R_Popup>
    </R_ItemLayout>
    <R_ItemLayout>
        <R_Popup R_Before_Open_Popup="BeforeWarePopup" Enabled="@(!string.IsNullOrEmpty(_viewModel.Data.CPRODUCT_ID))">@_localizer["Warehouse"]</R_Popup>
    </R_ItemLayout>
    <R_ItemLayout>
        <R_Popup R_Before_Open_Popup="BeforeLastInfoPopup" Enabled="@(!string.IsNullOrEmpty(_viewModel.Data.CPRODUCT_ID))">@_localizer["LastInfo"]</R_Popup>
    </R_ItemLayout>
</R_StackLayout>


<R_Conductor @ref="_conductorRef"
             R_ViewModel="_viewModel"
             R_IsHeader
             R_ServiceGetRecord="ServiceGetRecord"/>
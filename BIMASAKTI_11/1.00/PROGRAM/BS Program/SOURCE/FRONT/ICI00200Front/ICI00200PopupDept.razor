@using ICI00200Common.DTOs
@using ICI00200FrontResources
@inherits R_Page
@attribute [R_Page(Title = "Department")]
@inject R_ILocalizer<Resources_Dummy_Class> _localizer


<R_StackLayout Row Class="mb-1">
    <R_ItemLayout col="1">
        <R_Label>@_localizer["Product"]</R_Label>
    </R_ItemLayout>
    <R_ItemLayout col="2">
        <R_TextBox @bind-Value="@_viewModel.Param.CPRODUCT_ID" Enabled="false"/>
    </R_ItemLayout>
    <R_ItemLayout col="3">
        <R_TextBox @bind-Value="@_viewModel.Param.CPRODUCT_NAME" Enabled="false"/>
    </R_ItemLayout>
</R_StackLayout>

<R_StackLayout>
    <R_ItemLayout>
        <R_Grid @ref="@_gridRef"
                DataSource="@_viewModel.DeptList"
                R_ConductorSource="_conductorRef"
                Pageable
                PageSize="6"
                R_GridType="@R_eGridType.Navigator"
                R_ServiceGetListRecord="@ServiceGetListRecord"
                AllowDeleteRow="false"
                AllowEditRow="false"
                AllowAddNewRow="false"
                Height="200px"
                Width="60vw">
            <R_GridColumns>
                <R_GridTextColumn FieldName="@nameof(ICI00200DeptDTO.CDEPT_CODE)" HeaderText="@_localizer["DeptCode"]" Width="200px" TextAlignment="R_eTextAlignment.Left"/>
                <R_GridTextColumn FieldName="@nameof(ICI00200DeptDTO.CDEPT_NAME)" HeaderText="@_localizer["DeptName"]" Width="200px" TextAlignment="R_eTextAlignment.Left"/>
                <R_GridNumericColumn TValue="decimal" FieldName="@nameof(ICI00200DeptDTO.NQTY_HAND)" HeaderText="@_localizer["QtyOnHand"]" Width="200px" Decimals="2"/>
            </R_GridColumns>
        </R_Grid>
    </R_ItemLayout>
    <R_ItemLayout>
        <R_StackLayout Row Class="mb-1">
            <R_ItemLayout col="4">
                <R_StackLayout Row>
                    <R_ItemLayout col="5">
                        <R_Label>@_localizer["QtyPreOut"]</R_Label>
                    </R_ItemLayout>
                    <R_ItemLayout col="6">
                        <R_NumericTextBox @bind-Value="_viewModel.Data.NQTY_PREOUT" Arrows="false" Decimals="2" TextAlignment="R_eTextAlignment.Right" Enabled="false"/>
                    </R_ItemLayout>
                </R_StackLayout>
            </R_ItemLayout>

            <R_ItemLayout col="4">
                <R_StackLayout Row>
                    <R_ItemLayout col="4">
                        <R_Label>@_localizer["AvailableOut"]</R_Label>
                    </R_ItemLayout>
                    <R_ItemLayout col="6">
                        <R_NumericTextBox @bind-Value="_viewModel.Data.NQTY_AVAILOUT" Arrows="false" Decimals="2" TextAlignment="R_eTextAlignment.Right" Enabled="false"/>
                    </R_ItemLayout>
                </R_StackLayout>
            </R_ItemLayout>
        </R_StackLayout>

        <R_StackLayout Row Class="mb-1">
            <R_ItemLayout col="4">
                <R_StackLayout Row>
                    <R_ItemLayout col="5">
                        <R_Label>@_localizer["QtyOrder"]</R_Label>
                    </R_ItemLayout>
                    <R_ItemLayout col="6">
                        <R_NumericTextBox @bind-Value="_viewModel.Data.NQTY_ORDER" Arrows="false" Decimals="2" TextAlignment="R_eTextAlignment.Right" Enabled="false"/>
                    </R_ItemLayout>
                </R_StackLayout>
            </R_ItemLayout>
        </R_StackLayout>

        <R_StackLayout Row Class="mb-1">
            <R_ItemLayout col="4">
                <R_StackLayout Row>
                    <R_ItemLayout col="5">
                        <R_Label>@_localizer["QtyPreIn"]</R_Label>
                    </R_ItemLayout>
                    <R_ItemLayout col="6">
                        <R_NumericTextBox @bind-Value="_viewModel.Data.NQTY_PREIN" Arrows="false" Decimals="2" TextAlignment="R_eTextAlignment.Right" Enabled="false"/>
                    </R_ItemLayout>
                </R_StackLayout>
            </R_ItemLayout>

            <R_ItemLayout col="4">
                <R_StackLayout Row>
                    <R_ItemLayout col="4">
                        <R_Label>@_localizer["AvailableOut"]</R_Label>
                    </R_ItemLayout>
                    <R_ItemLayout col="6">
                        <R_NumericTextBox @bind-Value="_viewModel.Data.NQTY_AVAILIN" Arrows="false" Decimals="2" TextAlignment="R_eTextAlignment.Right" Enabled="false"/>
                    </R_ItemLayout>
                </R_StackLayout>
            </R_ItemLayout>
        </R_StackLayout>

        <R_StackLayout Row Class="mb-1">
            <R_ItemLayout col="4">
                <R_StackLayout Row>
                    <R_ItemLayout col="5">
                        <R_Label>@_localizer["ValueOnHand"]</R_Label>
                    </R_ItemLayout>
                    <R_ItemLayout col="6">
                        <R_NumericTextBox @bind-Value="_viewModel.Data.NVALUE_ONHAND" Arrows="false" Decimals="2" TextAlignment="R_eTextAlignment.Right" Enabled="false"/>
                    </R_ItemLayout>
                </R_StackLayout>
                </R_ItemLayout>
        </R_StackLayout>
    </R_ItemLayout>
</R_StackLayout>

<R_Conductor @ref="_conductorRef"
             R_ViewModel="_viewModel"
             R_IsHeader
             R_ServiceGetRecord="ServiceGetRecord"/>
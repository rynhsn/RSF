@inherits R_Page
@attribute [R_Page(Title = "Confirm Schedule")]
@using PMT02100COMMON.DTOs
@using PMT02100COMMON.DTOs.PMT02100;

<R_StackLayout Style="width:800px">
    <R_StackLayout Row>
        <R_ItemLayout col="3">
            <R_Label>@_localizer["_HODateAndTime"]*</R_Label>
        </R_ItemLayout>
        <R_ItemLayout col="5">
            <R_DateTimePicker R_ConductorSource="_conductorRef"
                              Enabled
                              DateTimePickerFormat="R_eDateTimePickerFormat.Short"
                              Min="@(DateTime.Today.AddDays(1))"
                              @bind-Value="loViewModel.loScheduleHeader.DSCHEDULED_DATE">
            </R_DateTimePicker>
        </R_ItemLayout>
    </R_StackLayout>
@*
    <R_StackLayout Row>
        <R_ItemLayout col="3">
            <R_Label>@_localizer["_HOTime"]*</R_Label>
        </R_ItemLayout>
        <R_ItemLayout col="1">
            <R_NumericTextBox R_ConductorSource="_conductorRef"
                              Enabled
                              Min="0"
                              Max="23"
                              @bind-Value="loViewModel.loScheduleHeader.ISCHEDULED_TIME_HOURS">
            </R_NumericTextBox>
        </R_ItemLayout>
        <R_ItemLayout col="1">
            <R_NumericTextBox R_ConductorSource="_conductorRef"
                              Enabled
                              Min="0"
                              Max="59"
                              @bind-Value="loViewModel.loScheduleHeader.ISCHEDULED_TIME_MINUTES">
            </R_NumericTextBox>
        </R_ItemLayout>
    </R_StackLayout>
*@
    <R_StackLayout Row>
        <R_ItemLayout col="3">
            <R_Label>@_localizer["_Department"]</R_Label>
        </R_ItemLayout>
        <R_ItemLayout col="9">
            <R_TextBox R_ConductorSource="_conductorRef"
                       Enabled="false"
                       @bind-Value="loViewModel.loSelectedHandover.CDEPT_CODE">
            </R_TextBox>
        </R_ItemLayout>
    </R_StackLayout>
    <R_StackLayout Row>
        <R_ItemLayout col="3">
            <R_Label>@_localizer["_RefNo"]</R_Label>
        </R_ItemLayout>
        <R_ItemLayout col="9">
            <R_TextBox R_ConductorSource="_conductorRef"
                       Enabled="false"
                       @bind-Value="loViewModel.loSelectedHandover.CREF_NO">
            </R_TextBox>
        </R_ItemLayout>
    </R_StackLayout>
    <R_StackLayout Row>
        <R_ItemLayout col="3">
            <R_Label>@_localizer["_RefDate"]</R_Label>
        </R_ItemLayout>
        <R_ItemLayout col="9">
            <R_DatePicker R_ConductorSource="_conductorRef"
                          Enabled="false"
                          ShowPickerButton="false"
                          @bind-Value="loViewModel.loSelectedHandover.DREF_DATE">
            </R_DatePicker>
        </R_ItemLayout>
    </R_StackLayout>
    <R_StackLayout Row>
        <R_ItemLayout col="3">
            <R_Label>@_localizer["_Property"]</R_Label>
        </R_ItemLayout>
        <R_ItemLayout col="3">
            <R_TextBox R_ConductorSource="_conductorRef"
                       Enabled="false"
                       @bind-Value="loViewModel.loSelectedHandover.CPROPERTY_ID">
            </R_TextBox>
        </R_ItemLayout>
        <R_ItemLayout col="6">
            <R_TextBox R_ConductorSource="_conductorRef"
                       Enabled="false"
                       @bind-Value="loViewModel.loSelectedHandover.CPROPERTY_NAME">
            </R_TextBox>
        </R_ItemLayout>
    </R_StackLayout>
    <R_StackLayout Row>
        <R_ItemLayout col="3">
            <R_Label>@_localizer["_Building"]</R_Label>
        </R_ItemLayout>
        <R_ItemLayout col="3">
            <R_TextBox R_ConductorSource="_conductorRef"
                       Enabled="false"
                       @bind-Value="loViewModel.loSelectedHandover.CBUILDING_ID">
            </R_TextBox>
        </R_ItemLayout>
        <R_ItemLayout col="6">
            <R_TextBox R_ConductorSource="_conductorRef"
                       Enabled="false"
                       @bind-Value="loViewModel.loSelectedHandover.CBUILDING_NAME">
            </R_TextBox>
        </R_ItemLayout>
    </R_StackLayout>
    <R_StackLayout Row>
        <R_ItemLayout col="3">
            <R_Label>@_localizer["_UnitTypeCategory"]</R_Label>
        </R_ItemLayout>
        <R_ItemLayout col="3">
            <R_TextBox R_ConductorSource="_conductorRef"
                       Enabled="false"
                       @bind-Value="loViewModel.loSelectedHandover.CUNIT_TYPE_CATEGORY_ID">
            </R_TextBox>
        </R_ItemLayout>
        <R_ItemLayout col="6">
            <R_TextBox R_ConductorSource="_conductorRef"
                       Enabled="false"
                       @bind-Value="loViewModel.loSelectedHandover.CUNIT_TYPE_CATEGORY_NAME">
            </R_TextBox>
        </R_ItemLayout>
    </R_StackLayout>
    <R_StackLayout Row>
        <R_ItemLayout col="3">
            <R_Label>@_localizer["_Unit"]</R_Label>
        </R_ItemLayout>
        <R_ItemLayout col="9">
            <R_TextBox R_ConductorSource="_conductorRef"
                       Enabled="false"
                       @bind-Value="loViewModel.loSelectedHandover.CUNIT_ID">
            </R_TextBox>
        </R_ItemLayout>
    </R_StackLayout>
    <R_StackLayout Row>
        <R_ItemLayout col="3">
            <R_Label>@_localizer["_Tenant"]</R_Label>
        </R_ItemLayout>
        <R_ItemLayout col="3">
            <R_TextBox R_ConductorSource="_conductorRef"
                       Enabled="false"
                       @bind-Value="loViewModel.loSelectedHandover.CTENANT_ID">
            </R_TextBox>
        </R_ItemLayout>
        <R_ItemLayout col="6">
            <R_TextBox R_ConductorSource="_conductorRef"
                       Enabled="false"
                       @bind-Value="loViewModel.loSelectedHandover.CTENANT_NAME">
            </R_TextBox>
        </R_ItemLayout>
    </R_StackLayout>
    <R_StackLayout Row>
        <R_ItemLayout col="3">
            <R_Label>@_localizer["_PhoneNo"]</R_Label>
        </R_ItemLayout>
        <R_ItemLayout col="9">
            <R_TextBox R_ConductorSource="_conductorRef"
                              Enabled="false"
                              @bind-Value="loViewModel.loSelectedHandover.CTENANT_PHONE_NO">
            </R_TextBox>
        </R_ItemLayout>
    </R_StackLayout>
    <R_StackLayout Row>
        <R_ItemLayout col="3">
            <R_Label>@_localizer["_EmailAddress"]</R_Label>
        </R_ItemLayout>
        <R_ItemLayout col="9">
            <R_TextBox R_ConductorSource="_conductorRef"
                       Enabled="false"
                       @bind-Value="loViewModel.loSelectedHandover.CTENANT_EMAIL">
            </R_TextBox>
        </R_ItemLayout>
    </R_StackLayout>

    <R_StackLayout Row>
        <R_ItemLayout col="12">
            <R_StackLayout Row Class="justify-content-between">
                <R_ItemLayout>
                    <R_Popup R_ConductorSource="@_conductorRef" Enabled="@(!string.IsNullOrWhiteSpace(loViewModel.loSelectedHandover.CTENANT_ID))" R_Before_Open_Popup="Before_Open_Tenant_Popup" R_After_Open_Popup="After_Open_Tenant_Popup">@_localizer["_EditTenantInfo"]</R_Popup>
                </R_ItemLayout>
                <R_ItemLayout>
                    <R_Button OnClick="OnCancel">
                        @_localizer["_Cancel"]
                    </R_Button>
                    <R_Button OnClick="@OnConfirm">
                        @_localizer["_Confirm"]
                    </R_Button>
                </R_ItemLayout>
            </R_StackLayout>
        </R_ItemLayout>
    </R_StackLayout>
</R_StackLayout>

<R_Conductor @ref="@_conductorRef"
             R_ViewModel="loViewModel"
             R_IsHeader>
</R_Conductor>
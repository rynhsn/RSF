@page "/PMM02000Upload"
@using PMM02000Common
@inherits R_Page

<R_StackLayout Row Style="width:1000px">
    <R_ItemLayout>
        <R_Label>Property</R_Label>
    </R_ItemLayout>
    <R_ItemLayout col="2">
        <R_TextBox Value="@_viewModel.PropertyId"/>
    </R_ItemLayout>
</R_StackLayout>

<R_StackLayout Row>
    <R_ItemLayout col="2">
        <R_Label>Source File</R_Label>
    </R_ItemLayout>
    <R_ItemLayout col="8">
        <R_InputFile OnChange="@OnChangeUploadSrc" Accepts="@_accepts"/>
    </R_ItemLayout>
</R_StackLayout>

<R_StackLayout Row>
    <R_Grid @ref="@_grid"
            DataSource="@_viewModel.GridList"
            Pageable
            R_GridType="@R_eGridType.Navigator"
            Height="450px"
            Width="900px"
            R_ServiceGetListRecord="@GetListRecord">
        <R_GridColumns>
            <R_GridNumericColumn TValue="Int32" FieldName="@nameof(PMM02000FromExcelDTO.NO)" HeaderText="No" Width="75px"/>
            <R_GridTextColumn FieldName="@nameof(PMM02000FromExcelDTO.SalesmanId)" Width="150px" HeaderText="Salesman Id"/>
            <R_GridTextColumn FieldName="@nameof(PMM02000FromExcelDTO.SalesmanName)" Width="150px" HeaderText="Salesman Name"/>

            <R_GridTextColumn FieldName="@nameof(PMM02000FromExcelDTO.Valid)" HeaderText="Valid" Width="100px" Visible="false"/>
            <R_GridTextColumn FieldName="@nameof(PMM02000FromExcelDTO.Notes)" HeaderText="Notes" Width="300px" Visible="false"/>
        </R_GridColumns>
    </R_Grid>
</R_StackLayout>

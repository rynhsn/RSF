@using Lookup_GSCOMMON.DTOs
@inherits R_Page

<R_StackLayout Row>
    <R_ItemLayout col="5">
        <R_StackLayout Row>
            <R_ItemLayout col="2">
                <R_Label>@_localizer["_RefNo"]</R_Label>
            </R_ItemLayout>
            <R_ItemLayout col="8">
                <R_TextBox @bind-Value="@_viewModel.LOI.CREF_NO"
                           Enabled="false">
                </R_TextBox>
            </R_ItemLayout>
        </R_StackLayout>

        <R_StackLayout Row>
            <R_ItemLayout col="2">
                <R_Label>@_localizer["_StartDate"]</R_Label>
            </R_ItemLayout>
            <R_ItemLayout col="5">
                <R_DatePicker ShowPickerButton="false" @bind-Value="@_viewModel.LOI.DSTART_DATE"
                              Enabled="false">
                </R_DatePicker>
            </R_ItemLayout>
        </R_StackLayout>
    </R_ItemLayout>
    <R_ItemLayout col="4">
        <R_StackLayout Row>
            <R_ItemLayout col="2">
                <R_Label>@_localizer["_Tenant"]</R_Label>
            </R_ItemLayout>
            <R_ItemLayout col="3">
                <R_TextBox @bind-Value="@_viewModel.LOI.CTENANT_ID"
                           Enabled="false">
                </R_TextBox>
            </R_ItemLayout>
            <R_ItemLayout col="6">
                <R_TextBox @bind-Value="@_viewModel.LOI.CTENANT_NAME"
                           Enabled="false">
                </R_TextBox>
            </R_ItemLayout>
        </R_StackLayout>

        <R_StackLayout Row>
            <R_ItemLayout col="2">
                <R_Label>@_localizer["_Building"]</R_Label>
            </R_ItemLayout>
            <R_ItemLayout col="3">
                <R_TextBox @bind-Value="@_viewModel.LOI.CBUILDING_ID"
                           Enabled="false">
                </R_TextBox>
            </R_ItemLayout>
            <R_ItemLayout col="6">
                <R_TextBox @bind-Value="@_viewModel.LOI.CBUILDING_NAME"
                           Enabled="false">
                </R_TextBox>
            </R_ItemLayout>
        </R_StackLayout>

    </R_ItemLayout>
    <R_ItemLayout col="3">
        <R_StackLayout Row>
            <R_ItemLayout col="5">
                <R_Label>@_localizer["_TotalGrossArea"]</R_Label>
            </R_ItemLayout>
            <R_ItemLayout col="5">
                <R_NumericTextBox @bind-Value="@_viewModel.LOI.NTOTAL_NET_AREA"
                                  TextAlignment="@R_eTextAlignment.Right"
                                  Arrows="false"
                                  Enabled="false">
                </R_NumericTextBox>
            </R_ItemLayout>
        </R_StackLayout>
        <R_StackLayout Row>
            <R_ItemLayout col="5">
                <R_Label>@_localizer["_TotalNetArea"]</R_Label>
            </R_ItemLayout>
            <R_ItemLayout col="5">
                <R_NumericTextBox @bind-Value="@_viewModel.LOI.NTOTAL_NET_AREA"
                                  TextAlignment="@R_eTextAlignment.Right"
                                  Arrows="false"
                                  Enabled="false">
                </R_NumericTextBox>
            </R_ItemLayout>
        </R_StackLayout>
    </R_ItemLayout>
</R_StackLayout>

<hr />

<R_StackLayout Row>
    <R_ItemLayout col="2">
        <R_StackLayout Row="true">
            <R_Grid @ref="@_gridLOIChargesListRef"
                    DataSource="@_viewModel.LOIInvoicePlanChargesGrid"
                    R_ConductorGridSource="@_conductorHeaderRef"
                    R_GridType="@R_eGridType.Original"
                    Pageable="true"
                    Height="455px"
                    AllowAddNewRow="false"
                    AllowEditRow="false"
                    AllowDeleteRow="false"
                    R_ServiceGetListRecord="@Charges_ServiceGetListRecord"
                    R_ServiceGetRecord="@Charges_ServiceGetRecord"
                    R_Display="@Charges_Display">
                <R_GridColumns>
                    <R_GridTextColumn FieldName="@nameof(PMT00551DTO.CCHARGES_ID_NAME)" HeaderText="@_localizer["_Charge"]" Width="210px"></R_GridTextColumn>
                </R_GridColumns>
            </R_Grid>
        </R_StackLayout>
    </R_ItemLayout>
    <R_ItemLayout col="10">
        <R_StackLayout Row>
            <R_ItemLayout col="1">
                <R_Label></R_Label>
            </R_ItemLayout>
            <R_ItemLayout col="1">
                <R_Label>@_localizer["_SeqNo"]</R_Label>
            </R_ItemLayout>
            <R_ItemLayout col="2">
                <R_Label>@_localizer["_Amount"]</R_Label>
            </R_ItemLayout>
            <R_ItemLayout col="1">
                <R_Label></R_Label>
            </R_ItemLayout>
            <R_ItemLayout Style="width: 10%">
                <R_Label>@_localizer["_Charges"]</R_Label>
            </R_ItemLayout>
            <R_ItemLayout col="2">
                <R_TextBox @bind-Value="@_SelectedCharges.CCHARGES_ID"
                           Enabled="false">
                </R_TextBox>
            </R_ItemLayout>
            <R_ItemLayout col="3">
                <R_TextBox @bind-Value="@_SelectedCharges.CCHARGES_NAME"
                           Enabled="false">
                </R_TextBox>
            </R_ItemLayout>
        </R_StackLayout>

        <R_StackLayout Row>
            <R_ItemLayout col="1">
                <R_Label>@_localizer["_Total"]</R_Label>
            </R_ItemLayout>
            <R_ItemLayout col="1">
                <R_NumericTextBox @bind-Value="@_viewModel.TotalSeqNo" Decimals="0" Arrows="false" Enabled="false"></R_NumericTextBox>
            </R_ItemLayout>
            <R_ItemLayout col="2">
                <R_NumericTextBox @bind-Value="@_viewModel.TotalAmount" Decimals="2" Arrows="false" Enabled="false"></R_NumericTextBox>
            </R_ItemLayout>
            <R_ItemLayout col="1">
                <R_Label></R_Label>
            </R_ItemLayout>
            <R_ItemLayout Style="width: 10%">
                <R_Label>@_localizer["_StartDate"]</R_Label>
            </R_ItemLayout>
            <R_ItemLayout col="3">
                <R_DatePicker ShowPickerButton="false" @bind-Value="@_SelectedCharges.DSTART_DATE"
                              Enabled="false">
                </R_DatePicker>
            </R_ItemLayout>
        </R_StackLayout>
        <R_StackLayout Row>
            <R_ItemLayout col="1">
                <R_Label>@_localizer["_Invoiced"]</R_Label>
            </R_ItemLayout>
            <R_ItemLayout col="1">
                <R_NumericTextBox @bind-Value="@_viewModel.InvoiceSeqNo" Decimals="0" Arrows="false" Enabled="false"></R_NumericTextBox>
            </R_ItemLayout>
            <R_ItemLayout col="2">
                <R_NumericTextBox @bind-Value="@_viewModel.InvoiceAmount" Decimals="2" Arrows="false" Enabled="false"></R_NumericTextBox>
            </R_ItemLayout>
            <R_ItemLayout col="1">
                <R_Label></R_Label>
            </R_ItemLayout>
            <R_ItemLayout Style="width: 10%">
                <R_Label>@_localizer["_EndDate"]</R_Label>
            </R_ItemLayout>
            <R_ItemLayout col="3">
                <R_DatePicker ShowPickerButton="false" @bind-Value="@_SelectedCharges.DEND_DATE"
                              Enabled="false">
                </R_DatePicker>
            </R_ItemLayout>
        </R_StackLayout>
        <R_StackLayout Row>
            <R_ItemLayout col="1">
                <R_Label>@_localizer["_Paid"]</R_Label>
            </R_ItemLayout>
            <R_ItemLayout col="1">
                <R_NumericTextBox @bind-Value="@_viewModel.PaidSeqNo" Decimals="0" Arrows="false" Enabled="false"></R_NumericTextBox>
            </R_ItemLayout>
            <R_ItemLayout col="2">
                <R_NumericTextBox @bind-Value="@_viewModel.PaidAmount" Decimals="2" Arrows="false" Enabled="false"></R_NumericTextBox>
            </R_ItemLayout>
            <R_ItemLayout col="1">
                <R_Label></R_Label>
            </R_ItemLayout>
            <R_ItemLayout Style="width: 10%">
                <R_Label>@_localizer["_PeriodMode"]</R_Label>
            </R_ItemLayout>
            <R_ItemLayout col="3">
                <R_TextBox @bind-Value="@_SelectedCharges.CINVOICE_PERIOD_DESCR"
                           Enabled="false">
                </R_TextBox>
            </R_ItemLayout>
        </R_StackLayout>

        <R_StackLayout Row="true">
            <R_Grid @ref="@_gridInvoiceListRef"
                    DataSource="@_viewModel.LOIInvoicePlanGrid"
                    R_ConductorSource="@_conductorRef"
                    R_GridType="@R_eGridType.Navigator"
                    Pageable="true"
                    Height="365px"
                    PageSize="14"
                    R_ServiceGetListRecord="@(InvoicePlan_ServiceGetListRecord)">
                <R_GridColumns>
                    <R_GridTextColumn FieldName="@nameof(PMT00550DTO.CSEQ_NO)" HeaderText="@_localizer["_SeqNo"]" Width="90px"></R_GridTextColumn>
                    <R_GridDatePickerColumn FieldName="@nameof(PMT00550DTO.DSTART_DATE)" HeaderText="@_localizer["_StartDate"]" Width="120px"></R_GridDatePickerColumn>
                    <R_GridDatePickerColumn FieldName="@nameof(PMT00550DTO.DEND_DATE)" HeaderText="@_localizer["_EndDate"]" Width="120px"></R_GridDatePickerColumn>
                    <R_GridTextColumn FieldName="@nameof(PMT00550DTO.CINV_PERIOD_Display)" HeaderText="@_localizer["_Period"]" Width="120px"></R_GridTextColumn>

                    <R_GridTextColumn FieldName="@nameof(PMT00550DTO.CREVENUE_SHARING_ID)" HeaderText="@_localizer["_RevenueSharingId"]" Width="160px"></R_GridTextColumn>

                    <R_GridNumericColumn TValue="decimal" FieldName="@nameof(PMT00550DTO.NSALES_AMOUNT)" HeaderText="@_localizer["_SalesAmount"]" Width="130px"></R_GridNumericColumn>
                    <R_GridNumericColumn TValue="decimal" FieldName="@nameof(PMT00550DTO.NAMOUNT)" HeaderText="@_localizer["_Amount"]" Width="100px"></R_GridNumericColumn>
                    <R_GridNumericColumn TValue="decimal" FieldName="@nameof(PMT00550DTO.NDISCOUNT)" HeaderText="@_localizer["_Discount"]" Width="100px"></R_GridNumericColumn>

                    <R_GridNumericColumn TValue="decimal" FieldName="@nameof(PMT00550DTO.NTAX_AMOUNT)" HeaderText="@_localizer["_TaxAmount"]" Width="120px"></R_GridNumericColumn>
                    <R_GridNumericColumn TValue="decimal" FieldName="@nameof(PMT00550DTO.NAFTER_TAX_AMOUNT)" HeaderText="@_localizer["_AfterTaxAmount"]" Width="150px"></R_GridNumericColumn>
                    <R_GridNumericColumn TValue="decimal" FieldName="@nameof(PMT00550DTO.NBOOKING_AMOUNT)" HeaderText="@_localizer["_BookingAmount"]" Width="150px"></R_GridNumericColumn>
                    <R_GridNumericColumn TValue="decimal" FieldName="@nameof(PMT00550DTO.NTOTAL_AMOUNT)" HeaderText="@_localizer["_TotalAmount"]" Width="140px"></R_GridNumericColumn>
                    <R_GridTextColumn FieldName="@nameof(PMT00550DTO.CSTATUS_DESCR)" HeaderText="@_localizer["_Status"]" Width="100px"></R_GridTextColumn>
                    <R_GridCheckBoxColumn FieldName="@nameof(PMT00550DTO.LINVOICED)" HeaderText="@_localizer["_Invoiced"]" Width="100px"></R_GridCheckBoxColumn>
                    <R_GridTextColumn FieldName="@nameof(PMT00550DTO.CINV_NO)" HeaderText="@_localizer["_InvoiceNo"]" Width="130px"></R_GridTextColumn>
                    <R_GridCheckBoxColumn FieldName="@nameof(PMT00550DTO.LPAYMENT)" HeaderText="@_localizer["_Payment"]" Width="100px"></R_GridCheckBoxColumn>
                    <R_GridTextColumn FieldName="@nameof(PMT00550DTO.CPAYMENT_NO)" HeaderText="@_localizer["_PaymentNo"]" Width="130px"></R_GridTextColumn>
                    <R_GridNumericColumn TValue="decimal" FieldName="@nameof(PMT00550DTO.NPAYMENT_AMOUNT)" HeaderText="@_localizer["_PaymentAmount"]" Width="160px"></R_GridNumericColumn>
                </R_GridColumns>
            </R_Grid>
        </R_StackLayout>

        <R_StackLayout Row>
            <R_ItemLayout col="2">
                <R_Label>@_localizer["_Description"]</R_Label>
            </R_ItemLayout>
            <R_ItemLayout col="10">
                <R_TextBox @bind-Value="@_viewModel.Data.CDESCRIPTION"
                           R_ConductorSource="@_conductorRef"
                           Enabled="false">
                </R_TextBox>
            </R_ItemLayout>
        </R_StackLayout>
    </R_ItemLayout>
</R_StackLayout>



<R_ConductorGrid @ref="@_conductorHeaderRef"
             R_IsHeader="true"
             >
</R_ConductorGrid>

<R_Conductor @ref="@_conductorRef"
             R_ViewModel="_viewModel"
             R_ConductorParent="@_conductorHeaderRef"
             R_ServiceGetRecord="@InvoicePlan_ServiceGetRecord">
</R_Conductor>


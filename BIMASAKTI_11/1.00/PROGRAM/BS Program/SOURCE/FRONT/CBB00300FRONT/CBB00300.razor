@inherits R_Page
@attribute [R_Page(Title = "Generate Cash Flow")]
@page "/CBB00300"
@using CBB00300COMMON.DTOs

<R_StackLayout Row>
    <R_ItemLayout col="12">
        
        <R_StackLayout Row>
            <R_ItemLayout col="2">
                <R_Label>@_localizer["_CurrentPeriod"]</R_Label>
            </R_ItemLayout>
            <R_ItemLayout col="5">
                <R_Label FontColor="R_eFontColor.Primary">@lcCurrentPeriodDisplay</R_Label>
            </R_ItemLayout>
        </R_StackLayout>

        <R_StackLayout Row>
            <R_ItemLayout col="2">
                <R_Label>@_localizer["_CashflowPeriod"]</R_Label>
            </R_ItemLayout>
            <R_ItemLayout col="5">
                <R_Label FontColor="R_eFontColor.Primary">@lcMinCashflowPeriodDisplay</R_Label>
                <R_Label>@lcStrip</R_Label>
                <R_Label FontColor="R_eFontColor.Primary">@lcMaxCashflowPeriodDisplay</R_Label>
            </R_ItemLayout>
        </R_StackLayout>
        
        <R_StackLayout Row>
            <R_ItemLayout col="2">
                <R_Label>@_localizer["_LastGeneratedBy"]</R_Label>
            </R_ItemLayout>
            <R_ItemLayout col="3">
                <R_DatePicker @bind-Value="@loViewModel.loCashFlow.DLAST_DATE" Enabled="false"></R_DatePicker>
            </R_ItemLayout>
            <R_ItemLayout col="1">
                <R_TextBox @bind-Value="@loViewModel.loCashFlow.CLAST_USER_ID" Enabled="false"></R_TextBox>
            </R_ItemLayout>
        </R_StackLayout>
    </R_ItemLayout>
</R_StackLayout>

<R_StackLayout Row>
    <R_ItemLayout>
        <R_Button OnClick="ProcessOnClick" Enabled="@(loViewModel.loCashFlow != null)">
            @_localizer["_Process"]
        </R_Button>
    </R_ItemLayout>
</R_StackLayout>
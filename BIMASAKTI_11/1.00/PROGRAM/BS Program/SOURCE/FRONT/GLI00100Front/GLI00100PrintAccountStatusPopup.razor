@page "/GLI00100PrintAccountStatusPopup"
@using GLI00100FrontResources
@using R_BlazorFrontEnd.Interfaces
@inherits R_Page
@attribute [R_Page(Title = "Print Account Status")];
@inject R_ILocalizer<Resources_Dummy_Class> _localizer

<R_StackLayout Style="width: 600px" Class="pe-2">

    <R_StackLayout Row Spacing="2" Class="mb-1">
        <R_ItemLayout col="2">
            <R_Label>@_localizer["LABEL_ACC"]</R_Label>
        </R_ItemLayout>
        <R_ItemLayout col="3">
            <R_TextBox @bind-Value="_parameter.CGLACCOUNT_NO" Enabled="false"/>
        </R_ItemLayout>
        <R_ItemLayout col="7">
            <R_TextBox @bind-Value="_parameter.CGLACCOUNT_NAME" Enabled="false"/>
        </R_ItemLayout>
    </R_StackLayout>

    <R_StackLayout Row Spacing="2" Class="mb-1">
        <R_ItemLayout col="2">
            <R_Label>@_localizer["LABEL_YEAR"]</R_Label>
        </R_ItemLayout>
        <R_ItemLayout col="3">
            <R_TextBox @bind-Value="_parameter.CYEAR" Enabled="false"/>
        </R_ItemLayout>

        <R_ItemLayout>
            <R_Label>@_localizer["LABEL_CURRTYPE"]</R_Label>
        </R_ItemLayout>
        <R_ItemLayout>
            <R_RadioGroup Data="@_mainViewModel.CCURRENCY_TYPE"
                          @bind-Value="_parameter.CCURRENCY_TYPE"
                          ValueField="Key"
                          TextField="Value"
                          Enabled="false"/>
        </R_ItemLayout>
    </R_StackLayout>

    <R_StackLayout Row Spacing="2" Class="mb-1">
        <R_ItemLayout col="2">
            <R_Label>@_localizer["LABEL_CENTER"]</R_Label>
        </R_ItemLayout>
        <R_ItemLayout col="3">
            <R_TextBox @bind-Value="_parameter.CCENTER_CODE" Enabled="false"/>
        </R_ItemLayout>
        <R_ItemLayout col="7">
            <R_TextBox @bind-Value="_parameter.CCENTER_NAME" Enabled="false"/>
        </R_ItemLayout>
    </R_StackLayout>

    <R_StackLayout Row Spacing="2" Class="mb-1">
        <R_ItemLayout col="2">
            <R_Label>@_localizer["LABEL_BUDGETNO"]</R_Label>
        </R_ItemLayout>
        <R_ItemLayout col="10">
            <R_TextBox @bind-Value="_parameter.CBUDGET_NAME_DISPLAY" Enabled="false"/>
        </R_ItemLayout>
    </R_StackLayout>

    <R_StackLayout Class="align-items-end">
        <R_ItemLayout>
            <R_PrintButton OnClick="OnClickPrint">@_localizer["LABEL_BTNPRINT"]</R_PrintButton>
        </R_ItemLayout>
    </R_StackLayout>
</R_StackLayout>
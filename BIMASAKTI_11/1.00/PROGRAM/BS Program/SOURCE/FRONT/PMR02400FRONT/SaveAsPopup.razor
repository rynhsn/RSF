@using R_BlazorFrontEnd.Interfaces
@inherits R_Page
@attribute [R_Page(Title = "Save As", ResourceId = "_pageTitleSaveAs")]

<R_StackLayout Row>
    <R_ItemLayout>
        <R_Label>
            @_localizer["_lbl_save_as"]
        </R_Label>
    </R_ItemLayout>

    <R_ItemLayout col="4">
        <R_TextBox @bind-Value="@_viewModel._ReportParam.CREPORT_FILENAME"></R_TextBox>
    </R_ItemLayout>

    <R_ItemLayout col="2">
        <R_ComboBox Data="@_viewModel._checkBoxReportExtensionList"
                    @bind-Value="@_viewModel._ReportParam.CREPORT_FILETYPE"
                    ValueField="@nameof(GeneralTypeDTO.CTYPE_CODE)"
                    TextField="@nameof(GeneralTypeDTO.CTYPE_NAME)"></R_ComboBox>
    </R_ItemLayout>
    <R_ItemLayout>
        <R_Button Class="col" OnClick="@Btn_SaveAsAsync" Enabled="@(!string.IsNullOrWhiteSpace(_viewModel._ReportParam.CREPORT_FILENAME) && !string.IsNullOrWhiteSpace(_viewModel._ReportParam.CREPORT_FILETYPE))">
            @_localizer["_btn_save"]
        </R_Button>
    </R_ItemLayout>
    <R_ItemLayout>
        <R_Button OnClick="@OnClickCancel">
            @_localizer["_btn_cancel"]
        </R_Button>
    </R_ItemLayout>
</R_StackLayout>
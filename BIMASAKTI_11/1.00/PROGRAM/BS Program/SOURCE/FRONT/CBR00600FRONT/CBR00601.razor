@inherits R_Page
@attribute [R_Page(ResourceId = "_SaveAs")]

<R_StackLayout Style="width: 600px">
    <R_StackLayout Row>
        <R_ItemLayout>
            <R_Label>
                @_localizer["_SaveAs"]
            </R_Label>
        </R_ItemLayout>
        <R_ItemLayout col="5">
            <R_TextBox @bind-Value="@SaveAsParam.CREPORT_FILENAME"></R_TextBox>
        </R_ItemLayout>
        <R_ItemLayout col="2">
            <R_ComboBox Data="@FileType"
                        @bind-Value="SaveAsParam.CREPORT_FILETYPE"
                        ValueField="Value"
                        TextField="Text"></R_ComboBox>
        </R_ItemLayout>
        <R_ItemLayout>
            <R_Button OnClick="@OnClickOk"
                      Enabled="!string.IsNullOrWhiteSpace(SaveAsParam.CREPORT_FILENAME)&&!string.IsNullOrWhiteSpace(SaveAsParam.CREPORT_FILETYPE)">
                @_localizer["_Save"]
            </R_Button>
            <R_Button OnClick="@OnClickCancel">
                @_localizer["_Cancel"]
            </R_Button>
        </R_ItemLayout>
    </R_StackLayout>
</R_StackLayout>
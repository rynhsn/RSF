@page "/GLI00100PrintAccountStatusPopup"
@inherits R_Page
@attribute [R_Page(Title = "Print Account Status")];

<R_StackLayout Style="width: 600px" Class="pe-2">

    <R_StackLayout Row Spacing="2" Class="mb-1">
        <R_ItemLayout col="2">
            <R_Label>Account</R_Label>
        </R_ItemLayout>
        <R_ItemLayout col="3">
            <R_TextBox @bind-Value="_parameter.CGLACCOUNT_NO" Enabled="false"/>
        </R_ItemLayout>
        <R_ItemLayout col="7">
            <R_TextBox @bind-Value="_parameter.CGLACCOUNT_NAME" Enabled="false"/>
        </R_ItemLayout>
    </R_StackLayout>

    <R_StackLayout Row Spacing="2" Class="mb-1">
        <R_ItemLayout col="2">
            <R_Label>Year</R_Label>
        </R_ItemLayout>
        <R_ItemLayout col="3">
            <R_TextBox @bind-Value="_parameter.CYEAR" Enabled="false"/>
        </R_ItemLayout>

        <R_ItemLayout>
            <R_Label>Currency Type</R_Label>
        </R_ItemLayout>
        <R_ItemLayout>
            <R_RadioGroup Data="@_mainViewModel.CCURRENCY_TYPE"
                          @bind-Value="_parameter.CCURRENCY_TYPE"
                          ValueField="Key"
                          TextField="Value"
                          Enabled="false"/>
        </R_ItemLayout>
    </R_StackLayout>

    <R_StackLayout Row Spacing="2" Class="mb-1">
        <R_ItemLayout col="2">
            <R_Label>Center</R_Label>
        </R_ItemLayout>
        <R_ItemLayout col="3">
            <R_TextBox @bind-Value="_parameter.CCENTER_CODE" Enabled="false"/>
        </R_ItemLayout>
        <R_ItemLayout col="7">
            <R_TextBox @bind-Value="_parameter.CCENTER_NAME" Enabled="false"/>
        </R_ItemLayout>
    </R_StackLayout>

    <R_StackLayout Row Spacing="2" Class="mb-1">
        <R_ItemLayout col="2">
            <R_Label>Budget No.</R_Label>
        </R_ItemLayout>
        <R_ItemLayout col="10">
            <R_TextBox @bind-Value="_parameter.CBUDGET_NAME_DISPLAY" Enabled="false"/>
        </R_ItemLayout>
    </R_StackLayout>

    <R_StackLayout Class="align-items-end">
        <R_ItemLayout>
            <R_Button OnClick="OnClickPrint">Print</R_Button>
        </R_ItemLayout>
    </R_StackLayout>
</R_StackLayout>
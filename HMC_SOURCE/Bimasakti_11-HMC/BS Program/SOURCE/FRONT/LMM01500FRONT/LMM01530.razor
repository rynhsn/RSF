@inherits R_Page
@using LMM01500COMMON
@using LMM01500MODEL
@inject R_ILocalizer<LMM01500FrontResources.Resources_Dummy_Class> _localizer

<R_StackLayout Row>
    <R_ItemLayout col="2">
        <R_Label Class="fw-bold" FontSize="11">@_localizer["_InvGrp"]</R_Label>
    </R_ItemLayout>

    <R_ItemLayout col="2">
        <R_TextBox @bind-Value="@_OtherCharges_viewModel.InvGrpCode"
                   Enabled="false">
        </R_TextBox>
    </R_ItemLayout>
    <R_ItemLayout col="5">
        <R_TextBox @bind-Value="@_OtherCharges_viewModel.InvGrpName"
                   Enabled="false">
        </R_TextBox>
    </R_ItemLayout>
</R_StackLayout>

<R_StackLayout Row>
    <R_ItemLayout col="12">
        <R_Grid @ref="@_OtherCharges_gridRef"
                DataSource="@_OtherCharges_viewModel.OtherChargesGrid"
                Pageable="true"
                R_ConductorGridSource="@_OtherCharges_conductorRef"
                R_GridType="@R_eGridType.Original"
                AllowAddNewRow="@enableAdd"
                AllowEditRow="false"
                AllowDeleteRow="true"
                R_Before_Open_Grid_Lookup="@OtherCharges_Before_Open_Grid_Lookup"
                R_After_Open_Grid_Lookup="@OtherCharges_After_Open_Grid_Lookup"
                R_ServiceGetListRecord="@OtherCharges_Grid_R_ServiceGetListRecord"
                Height="350px">
            <R_GridColumns>
                <R_GridLookupColumn FieldName="CCHARGES_ID" HeaderText="@_localizer["_ChargesId"]" R_EnableAdd Width="200px"></R_GridLookupColumn>
                <R_GridTextColumn FieldName="CCHARGES_NAME" HeaderText="@_localizer["_ChargesName"]" R_EnableAdd="false" Width="300px"></R_GridTextColumn>
                <R_GridTextColumn FieldName="UNIT_UTILITY_CHARGE" HeaderText="@_localizer["_UnitOrUtilityCharges"]" R_EnableAdd="false" Width="300px"></R_GridTextColumn>
                <R_GridTextColumn FieldName="CCHARGES_TYPE_DESCR" HeaderText="@_localizer["_ChargesType"]" R_EnableAdd="false" Width="200px"></R_GridTextColumn>
                <R_GridTextColumn FieldName="CCREATE_BY" HeaderText="@_localizer["_CreateBy"]" R_EnableAdd="false" Width="150px"></R_GridTextColumn>
                <R_GridDateTimePickerColumn FieldName="DCREATE_DATE" HeaderText="@_localizer["_CreateDate"]" R_EnableAdd="false" Width="200px"></R_GridDateTimePickerColumn>
            </R_GridColumns>
        </R_Grid>
    </R_ItemLayout>
</R_StackLayout>

<R_ConductorGrid @ref="@_OtherCharges_conductorRef"
                 R_ViewModel="@_OtherCharges_viewModel"
                 R_IsHeader="true"
                 R_ServiceGetRecord="@OtherCharges_ServiceGetRecord"
                 R_ServiceSave="@OtherCharges_ServiceSave"
                 R_ServiceDelete="@OtherCharges_ServiceDelete"
                 R_SetOther="@Grid_R_SetOther"></R_ConductorGrid>
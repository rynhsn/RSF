@inherits R_Page
@using PMM01000COMMON

<R_StackLayout Row>
    <R_ItemLayout col="2">
        <R_StackLayout Row>
            <R_Grid @ref="@_RateOT_gridRef"
                    DataSource="@_viewModel.RateOTList"
                    Pageable
                    R_ConductorSource="@_RateOT_conductorRef"
                    R_GridType="R_eGridType.Navigator"
                    R_ServiceGetListRecord="RateOTDate_ServiceGetListRecord"
                    Enabled="@(_RateOT_conductorRef.R_ConductorMode == R_eConductorMode.Normal)"
                    Height="250px">
                <R_GridColumns>
                    <R_GridDatePickerColumn FieldName="@nameof(PMM01050DTO.DCHARGES_DATE)" HeaderText="@_localizer["_Date"]"></R_GridDatePickerColumn>
                </R_GridColumns>
            </R_Grid>
        </R_StackLayout>
    </R_ItemLayout>
    <R_ItemLayout col="10">
        <R_StackLayout Row>
            <R_ItemLayout col="3">
                <R_Label>@_localizer["_UtilityChargesId"]</R_Label>
            </R_ItemLayout>
            <R_ItemLayout col="3">
                <R_TextBox @bind-Value="@_viewModel.Data.CCHARGES_ID"
                           R_ConductorSource="@_RateOT_conductorRef"
                           Enabled="false">
                </R_TextBox>
            </R_ItemLayout>
            <R_ItemLayout col="4">
                <R_TextBox @bind-Value="@_viewModel.Data.CCHARGES_NAME"
                           R_ConductorSource="@_RateOT_conductorRef"
                           Enabled="false">
                </R_TextBox>
            </R_ItemLayout>
            <R_ItemLayout>
                <R_Label FontColor="@R_eFontColor.Primary" FontStyle="@R_eFontStyle.Bold">@_HeaderData.CCHARGES_TYPE_DESCR</R_Label>
            </R_ItemLayout>
        </R_StackLayout>

        <R_StackLayout Row><R_ItemLayout Style="width: 21%"><R_Label></R_Label></R_ItemLayout></R_StackLayout>

        <R_StackLayout Row>
            <R_ItemLayout col="3">
                <R_Label>@_localizer["_Date"]*</R_Label>
            </R_ItemLayout>
            <R_ItemLayout col="3">
                <R_DatePicker @bind-Value="@_viewModel.Data.DCHARGES_DATE"
                              R_ConductorSource="@_RateOT_conductorRef"
                              R_EnableAdd>
                </R_DatePicker>
            </R_ItemLayout>
            <R_ItemLayout col="2">
                <R_Label>@_localizer["_CurrCode"]*</R_Label>
            </R_ItemLayout>
            <R_ItemLayout col="2">
                <R_TextBox @bind-Value="@_viewModel.Data.CCURRENCY_CODE"
                           R_ConductorSource="@_RateOT_conductorRef"
                           OnLostFocus="@Currency_OnLostFocus"
                           R_EnableAdd R_EnableEdit>
                </R_TextBox>
            </R_ItemLayout>
            <R_ItemLayout>
                <R_Lookup R_Before_Open_Lookup="@Currency_Before_Open_Lookup"
                          R_After_Open_Lookup="@Currency_After_Open_Lookup"
                          R_ConductorSource="@_RateOT_conductorRef"
                          R_EnableAdd
                          R_EnableEdit>
                    ...
                </R_Lookup>
            </R_ItemLayout>
        </R_StackLayout>

        <R_StackLayout Row><R_ItemLayout><R_Label></R_Label></R_ItemLayout></R_StackLayout>

        <R_StackLayout Row>
            <R_ItemLayout col="3">
                <R_CheckBox Value="@_viewModel.Data.LSPLIT_ADMIN"
                            ValueChanged="@((bool value) => Rate_SplitAdmin_OnChange(value))"
                            R_ConductorSource="@_RateOT_conductorRef"
                            R_EnableEdit R_EnableAdd>
                </R_CheckBox>
                <R_Label>@_localizer["_SpiltAdminInvoice"]</R_Label>
            </R_ItemLayout>
            <R_ItemLayout col="2">
                <R_Label>@_localizer["_AdminChargesId"]</R_Label>
            </R_ItemLayout>
            <R_ItemLayout col="2">
                <R_ComboBox Data="@_viewModel.CADMIN_CHARGE_ID_LIST"
                            Value="@_viewModel.Data.CADMIN_CHARGE_ID"
                            ValueChanged="@((string value) => Rate_ChargeAdmin_OnChange(value))"
                            ValueField="@nameof(PMM01002DTO.CCHARGES_ID)"
                            TextField="@nameof(PMM01002DTO.CCHARGES_NAME)"
                            Enabled="@(_RateOT_conductorRef.R_ConductorMode != R_eConductorMode.Normal && _viewModel.Data.LSPLIT_ADMIN)">
                </R_ComboBox>
            </R_ItemLayout>
        </R_StackLayout>

        <R_StackLayout Row="true">
            <R_ItemLayout col="3">
                <R_Label>@_localizer["_AdminFee"]</R_Label>
                <R_Label>@_localizer["_PerMonth"]</R_Label>
            </R_ItemLayout>
            <R_ItemLayout col="2">
                <R_StackLayout Row>
                    <R_ItemLayout col="10">
                        <R_RadioGroup @ref="@AdminPerMonth_RadioGrp"
                                      Data="@_Universal_viewModel.AdminFeeTypeList"
                                      Value="@_viewModel.Data.CADMIN_FEE"
                                      Layout="R_eRadioGroupLayout.Vertical"
                                      ValueField="@nameof(PMM01000UniversalDTO.CCODE)"
                                      TextField="@nameof(PMM01000UniversalDTO.CDESCRIPTION)"
                                      R_ConductorSource="@_RateOT_conductorRef" R_EnableEdit R_EnableAdd ValueChanged="@((string value) => RateOT_Admin_OnChange(value))">
                        </R_RadioGroup>
                    </R_ItemLayout>
                </R_StackLayout>
            </R_ItemLayout>
            <R_ItemLayout col="4">
                <R_StackLayout Row>
                    <R_ItemLayout><R_Label></R_Label></R_ItemLayout>
                </R_StackLayout>
                <R_StackLayout Row>
                    <R_ItemLayout col="6">
                        <R_NumericTextBox @bind-Value="@_viewModel.Data.NADMIN_FEE_AMT"
                                          R_ConductorSource="@_RateOT_conductorRef"
                                          Min="0"
                                          Arrows="false" Enabled="@(_RateOT_conductorRef.R_ConductorMode != R_BlazorFrontEnd.Enums.R_eConductorMode.Normal && _viewModel.Data.CADMIN_FEE == "01")">
                        </R_NumericTextBox>
                    </R_ItemLayout>
                </R_StackLayout>
                <R_StackLayout Row>
                    <R_ItemLayout col="5">
                        <R_NumericTextBox @bind-Value="@_viewModel.Data.NADMIN_FEE_PCT"
                                          R_ConductorSource="@_RateOT_conductorRef"
                                          Min="0" Max="100"
                                          Arrows="false" Enabled="@(_RateOT_conductorRef.R_ConductorMode != R_BlazorFrontEnd.Enums.R_eConductorMode.Normal && _viewModel.Data.CADMIN_FEE == "02")">
                        </R_NumericTextBox>
                    </R_ItemLayout>
                    <R_ItemLayout col="1">
                        <R_Label>%</R_Label>
                    </R_ItemLayout>
                </R_StackLayout>
            </R_ItemLayout>
        </R_StackLayout>

        <R_StackLayout Row>
            <R_ItemLayout col="3"></R_ItemLayout>
            <R_ItemLayout col="1">
                <R_CheckBox @bind-Value="@_viewModel.Data.LADMIN_FEE_TAX"
                            Enabled="@(_RateOT_conductorRef.R_ConductorMode != R_BlazorFrontEnd.Enums.R_eConductorMode.Normal && string.IsNullOrWhiteSpace(_viewModel.Data.CADMIN_CHARGE_ID))">
                </R_CheckBox>
                <R_Label>@_localizer["_Taxable"]</R_Label>
            </R_ItemLayout>
        </R_StackLayout>

        <R_StackLayout Row>
            <R_ItemLayout col="3">
                <R_Label>@_localizer["_UnitAreaValidation"]</R_Label>
            </R_ItemLayout>
            <R_ItemLayout col="1">
                <R_NumericTextBox @bind-Value="@_viewModel.Data.NUNIT_AREA_VALID_FROM"
                                  R_ConductorSource="@_RateOT_conductorRef"
                                  Arrows="false" R_EnableEdit R_EnableAdd>
                </R_NumericTextBox>
            </R_ItemLayout>
            <R_ItemLayout col="1">
                <R_Label>@_localizer["_to"]</R_Label>
            </R_ItemLayout>
            <R_ItemLayout col="1">
                <R_NumericTextBox @bind-Value="@_viewModel.Data.NUNIT_AREA_VALID_TO"
                                  R_ConductorSource="@_RateOT_conductorRef"
                                  Arrows="false" R_EnableEdit R_EnableAdd>
                </R_NumericTextBox>
            </R_ItemLayout>
        </R_StackLayout>


    </R_ItemLayout>
</R_StackLayout>

<R_StackLayout Row>
    <R_ItemLayout col="6">
        <R_Label FontColor="@R_eFontColor.Danger">@_localizer["_WeDayOverRate"]</R_Label>
    </R_ItemLayout>
    <R_ItemLayout col="6">
        <R_StackLayout Row>
            <R_ItemLayout>
                <R_Label FontColor="@R_eFontColor.Danger">@_localizer["_WeekOverRate"]</R_Label>
            </R_ItemLayout>
            <R_ItemLayout col="2">
                <R_Label></R_Label>
            </R_ItemLayout>
            <R_ItemLayout col="2">
                <R_CheckBox Value="@_viewModel.Data.LHOLIDAY"
                            R_ConductorSource="@_RateOT_conductorRef"
                            ValueChanged="@((bool value) => Rate_Holiday_OnChange(value))"
                            R_EnableEdit R_EnableAdd>
                </R_CheckBox>
                <R_Label>@_localizer["_Holiday"]</R_Label>

            </R_ItemLayout>

            <R_ItemLayout col="2">
                <R_CheckBox Value="@_viewModel.Data.LSATURDAY"
                            R_ConductorSource="@_RateOT_conductorRef"
                            ValueChanged="@((bool value) => Rate_Saturday_OnChange(value))"
                            R_EnableEdit R_EnableAdd>
                </R_CheckBox>
                <R_Label>@_localizer["_Saturday"]</R_Label>

            </R_ItemLayout>

            <R_ItemLayout col="2">
                <R_CheckBox Value="@_viewModel.Data.LSUNDAY"
                            R_ConductorSource="@_RateOT_conductorRef"
                            ValueChanged="@((bool value) => Rate_Sunday_OnChange(value))"
                            R_EnableEdit R_EnableAdd>
                </R_CheckBox>
                <R_Label>@_localizer["_Sunday"]</R_Label>
            </R_ItemLayout>
        </R_StackLayout>
    </R_ItemLayout>
</R_StackLayout>

<R_StackLayout Row>
    <R_ItemLayout col="6">
        <R_Grid @ref="@_RateOTDetailWD_gridRef"
                DataSource="@_viewModel.RateOTWDDetailList"
                Pageable
                R_ConductorGridSource="@_RateOTDetailWD_conductorRef"
                R_GridType="@R_eGridType.Batch"
                AllowAddNewRow="@true"
                AllowEditRow="@true"
                AllowDeleteRow="@true"
                Enabled="@(!EnableNormalMode && _viewModel.Data.DCHARGES_DATE != null)"
                R_ServiceGetListRecord="@RateOTDetailWD_ServiceGetListRecord"
                R_ServiceGetRecord="@RateOTDetailWD_ServiceGetRecord"
                R_AfterAdd="@RateOTWDDetail_AfterAdd"
                R_Validation="@RateOTWDDetail_Validation"
                Height="200px">
            <R_GridColumns>
                <R_GridNumericColumn TValue="int" FieldName="ILEVEL" Arrows="false" Min="1" HeaderText="@_localizer["_Level"]" R_EnableAdd R_EnableEdit Width="75px"></R_GridNumericColumn>
                <R_GridTextColumn FieldName="CLEVEL_DESC" HeaderText="@_localizer["_Desc"]" R_EnableAdd R_EnableEdit Width="170px" MaxLength="255"></R_GridTextColumn>
                <R_GridNumericColumn TValue="int" FieldName="IHOURS_FROM" Arrows="false" HeaderText="@_localizer["_From"]" R_EnableAdd R_EnableEdit Width="75px"></R_GridNumericColumn>
                <R_GridNumericColumn TValue="int" FieldName="IHOURS_TO" Arrows="false" HeaderText="@_localizer["_to"]" R_EnableAdd R_EnableEdit Width="75px"></R_GridNumericColumn>
                <R_GridNumericColumn TValue="decimal" FieldName="NRATE_HOUR" Arrows="false" HeaderText="@_localizer["_RateperHour"]" R_EnableAdd R_EnableEdit Width="125px"></R_GridNumericColumn>
            </R_GridColumns>
            </R_Grid>
            </R_ItemLayout>
    <R_ItemLayout col="6">
            <R_Grid @ref="@_RateOTDetailWK_gridRef"
                DataSource="@_viewModel.RateOTWKDetailList"
                Pageable
                R_ConductorGridSource="@_RateOTDetailWK_conductorRef"
                R_GridType="@R_eGridType.Batch"
                AllowAddNewRow="@true"
                AllowEditRow="@true"
                AllowDeleteRow="@true"
                Enabled="@(!EnableNormalMode && _viewModel.Data.DCHARGES_DATE != null && (_viewModel.Data.LHOLIDAY || _viewModel.Data.LSATURDAY || _viewModel.Data.LSUNDAY))"
                R_ServiceGetListRecord="@RateOTDetailWK_ServiceGetListRecord"
                R_ServiceGetRecord="@RateWGDetailWK_ServiceGetRecord"
                R_AfterAdd="@RateOTWKDetail_AfterAdd"
                R_Validation="@RateOTWKDetail_Validation"
                Height="200px">
            <R_GridColumns>
                <R_GridNumericColumn TValue="int" FieldName="ILEVEL" Arrows="false" Min="1" HeaderText="@_localizer["_Level"]" R_EnableAdd R_EnableEdit Width="75px"></R_GridNumericColumn>
                <R_GridTextColumn FieldName="CLEVEL_DESC" HeaderText="@_localizer["_Desc"]" R_EnableAdd R_EnableEdit Width="170px" MaxLength="255"></R_GridTextColumn>
                <R_GridNumericColumn TValue="int" FieldName="IHOURS_FROM" Arrows="false" HeaderText="@_localizer["_From"]" R_EnableAdd R_EnableEdit Width="75px"></R_GridNumericColumn>
                <R_GridNumericColumn TValue="int" FieldName="IHOURS_TO" Arrows="false" HeaderText="@_localizer["_to"]" R_EnableAdd R_EnableEdit Width="75px"></R_GridNumericColumn>
                <R_GridNumericColumn TValue="decimal" FieldName="NRATE_HOUR" Arrows="false" HeaderText="@_localizer["_RateperHour"]" R_EnableAdd R_EnableEdit Width="125px"></R_GridNumericColumn>
            </R_GridColumns>
            </R_Grid>
    </R_ItemLayout>
</R_StackLayout>

<R_StackLayout Row>
    <R_ItemLayout col="3">
        <R_CheckBox @bind-Value="@_viewModel.Data.LCUT_OFF_WEEKDAY"
                    R_ConductorSource="@_RateOT_conductorRef"
                    R_EnableEdit R_EnableAdd>
        </R_CheckBox>
        <R_Label>@_localizer["_CutOfOverWeek"]</R_Label>

    </R_ItemLayout>
</R_StackLayout>

<R_StackLayout Row Class="justify-content-between mt-2">
    <R_ItemLayout>
        <R_AddButton R_Conductor="@_RateOT_conductorRef" Enabled="@(EnableNormalMode && EnableHasData )"></R_AddButton>
        <R_EditButton R_Conductor="@_RateOT_conductorRef" Enabled="@(EnableNormalMode && EnableHasData && _viewModel.RateOTList.Count > 0)"></R_EditButton>
        <R_DeleteButton R_Conductor="@_RateOT_conductorRef" Enabled="@(EnableNormalMode && EnableHasData && _viewModel.RateOTList.Count > 0)"></R_DeleteButton>
        <R_Button Class="ms-6" OnClick="@Button_OnClickPrintAsync" R_ConductorSource="@_RateOT_conductorRef" Enabled="@(EnableNormalMode && _viewModel.RateOTList.Count > 0)">@_localizer["_PrintBtn"]</R_Button>
    </R_ItemLayout>
    <R_ItemLayout>
        <R_CancelButton R_Conductor="@_RateOT_conductorRef"></R_CancelButton>
        <R_SaveButton R_Conductor="@_RateOT_conductorRef"></R_SaveButton>
    </R_ItemLayout>
</R_StackLayout>


<R_Conductor @ref="@_RateOT_conductorRef"
             R_ViewModel="@_viewModel"
             R_IsHeader="true"
             R_ServiceGetRecord="@RateOT_ServiceGetRecord"
             R_ServiceSave="@RateOT_ServiceSave"
             R_AfterSave="@RateOT_AfterSave"
             R_BeforeCancel="@RateOT_BeforeCancel"
             R_SetOther="@Grid_R_SetOther"
             R_Display="@RateOT_Display"
             R_Validation="@RateOT_Validation"
             R_AfterAdd="@RateOT_AfterAdd"
             R_ServiceDelete="@RateOT_ServiceDelete">
</R_Conductor>

<R_ConductorGrid @ref="@_RateOTDetailWD_conductorRef"
                 R_ConductorParent="@_RateOT_conductorRef">
</R_ConductorGrid>

<R_ConductorGrid @ref="@_RateOTDetailWK_conductorRef"
                 R_ConductorParent="@_RateOT_conductorRef">
</R_ConductorGrid>
<?xml version="1.0" encoding="utf-8" ?>
<log4net>
    <!-- Appender untuk menampilkan log di konsol -->
    <appender name="ConsoleAppender" type="log4net.Appender.ConsoleAppender">
        <layout type="log4net.Layout.PatternLayout">
            <conversionPattern value="%date %-5level %logger - %message%newline" />
        </layout>
    </appender>

    
    <!-- Appender untuk menyimpan log harian -->
    <appender name="RollingFileAppender" type="log4net.Appender.RollingFileAppender">
        <!-- Path dasar file log -->
        <file value=".\\Log\\HDA00100" />
        <!-- Gaya rolling berdasarkan tanggal -->
        <rollingStyle value="Date" />
        <!-- Pola nama file log dengan tanggal -->
        <datePattern value="yyyy-MM-dd'.log'" />
        <!-- Log tidak ditimpa, file baru dibuat -->
        <staticLogFileName value="false" />
        <!-- Layout untuk log -->
        <layout type="log4net.Layout.PatternLayout">
            <conversionPattern value="%date %-5level %logger - %message%newline" />
        </layout>
    </appender>

    <!-- Konfigurasi root logger -->
    <root>
        <level value="ALL" />
        <!-- Menampilkan log di konsol -->
        <appender-ref ref="ConsoleAppender" />
        <!-- Menyimpan log harian -->
        <appender-ref ref="RollingFileAppender" />
    </root>
</log4net>

@attribute [R_Page(Title = "Print allocation")]
@inherits R_Page
@using GLM00400COMMON
@inject R_ILocalizer<GLM00400FrontResources.Resources_Dummy_Class> _localizer

<R_StackLayout Style="width: 800px">

    <R_StackLayout Row>
        <R_ItemLayout col="2">
            <R_Label>@_localizer["_Dept"]</R_Label>
        </R_ItemLayout>
        <R_ItemLayout col="3">
            <R_TextBox @ref="@DeptCode_TextBox"
                       @bind-Value="@_AllocationJournalHD_viewModel.Data.CDEPT_CODE"
                       OnLostFocus="@DeptCode_OnLostFocus"
                       Enabled="true">
            </R_TextBox>
        </R_ItemLayout>
        <R_ItemLayout col="0">
            <R_Lookup R_Before_Open_Lookup="Allocation_Department_Before_Open_Lookup" R_After_Open_Lookup="Allocation_Department_From_After_Open_Lookup">
                ...
            </R_Lookup>
        </R_ItemLayout>
        <R_ItemLayout col="5">
            <R_TextBox @bind-Value="@_DeptName"
                       Enabled="false">
            </R_TextBox>
        </R_ItemLayout>
    </R_StackLayout>

    <R_StackLayout Row>
        <R_ItemLayout col="2">
            <R_Label>@_localizer["_AllocPriod"]</R_Label>
        </R_ItemLayout>
        <R_ItemLayout col="3">
            <R_NumericTextBox @bind-Value="@_IYear"
                              Min="@_IMin"
                              Max="@_IMax"
                              ThousandSeparator="false"
                              Enabled="true">
            </R_NumericTextBox>
        </R_ItemLayout>
    </R_StackLayout>

    <R_StackLayout Class="border p-1">
        <R_StackLayout Row>
            <R_ItemLayout col="3">
                <R_Label FontStyle="R_eFontStyle.Bold" FontColor="R_eFontColor.Danger">@_localizer["_AllocNo"]</R_Label>
            </R_ItemLayout>
        </R_StackLayout>

        <R_StackLayout Row>
            <R_ItemLayout col="1">
                <R_Label>@_localizer["_From"]</R_Label>
            </R_ItemLayout>
            <R_ItemLayout col="3">
                <R_ComboBox Data="@_AllocationJournalHD_viewModel.AllocationJournalFromGrid"
                            @bind-Value="@_AllocationJournalHD_viewModel.Data.CFROM_ALLOC_NO"
                            PopupMaxHeight="140px"
                            ValueField="@nameof(GLM00400DTO.CALLOC_NO)"
                            TextField="@nameof(GLM00400DTO.CALLOC_NO)">
                </R_ComboBox>
            </R_ItemLayout>
            <R_ItemLayout col="1">
                <R_Label>@_localizer["_To"]</R_Label>
            </R_ItemLayout>
            <R_ItemLayout col="3">
                <R_ComboBox Data="@_AllocationJournalHD_viewModel.AllocationJournalToGrid"
                            @bind-Value="@_AllocationJournalHD_viewModel.Data.CTO_ALLOC_NO"
                            PopupMaxHeight="140px"
                            ValueField="@nameof(GLM00400DTO.CALLOC_NO)"
                            TextField="@nameof(GLM00400DTO.CALLOC_NO)">
                </R_ComboBox>
            </R_ItemLayout>
        </R_StackLayout>
    </R_StackLayout>

    <R_StackLayout Row Class="mt-2">
        <R_ItemLayout>
            <R_Button OnClick="Button_OnClickOkAsync">
                @_localizer["_Print"]
            </R_Button>
            <R_Button OnClick="Button_OnClickCancelAsync">
                @_localizer["_CancelBtn"]
            </R_Button>
        </R_ItemLayout>
    </R_StackLayout>
</R_StackLayout>
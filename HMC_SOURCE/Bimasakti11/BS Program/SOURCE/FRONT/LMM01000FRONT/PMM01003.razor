@inherits R_Page
@attribute [R_Page(ResourceId = "_CopyNewUtilityCharges")]
@inject R_ILocalizer<PMM01000FrontResources.Resources_Dummy_Class> _localizer

<R_StackLayout Style="width: 800px">
    <R_StackLayout Row>
        <R_ItemLayout col="2">
            <R_Label>@_localizer["_CurrentCharges"]</R_Label>
        </R_ItemLayout>

        <R_ItemLayout col="3">
            <R_TextBox @bind-Value="@_viewModel.Data.CCURRENT_CHARGES_ID"
                       R_ConductorSource="@_UtilityCharges_conductorRef"
                       Enabled="false">
            </R_TextBox>
        </R_ItemLayout>
        <R_ItemLayout col="6">
            <R_TextBox @bind-Value="@_viewModel.Data.CCURRENT_CHARGES_NAME"
                       R_ConductorSource="@_UtilityCharges_conductorRef"
                       Enabled="false">
            </R_TextBox>
        </R_ItemLayout>
    </R_StackLayout>

    <R_StackLayout Row>
        <R_ItemLayout col="2">
            <R_Label>@_localizer["_NewCharges"]</R_Label>
        </R_ItemLayout>

        <R_ItemLayout col="3">
            <R_TextBox @ref="@NewChargesId"
                       @bind-Value="@_viewModel.Data.CNEW_CHARGES_ID"
                       R_ConductorSource="@_UtilityCharges_conductorRef"
                       MaxLength="20"
                       Enabled="true">
            </R_TextBox>
        </R_ItemLayout>
        <R_ItemLayout col="6">
            <R_TextBox @bind-Value="@_viewModel.Data.CNEW_CHARGES_NAME"
                       R_ConductorSource="@_UtilityCharges_conductorRef"
                       MaxLength="100"
                       Enabled="true">
            </R_TextBox>
        </R_ItemLayout>
    </R_StackLayout>

    <R_StackLayout Row Class="justify-content-end">
            <R_Button OnClick="Button_OnClickCloseAsync">
            @_localizer["_CancelBtn"]
            </R_Button>
            <R_Button OnClick="Button_OnClickOkAsync">
            @_localizer["_SaveBtn"]
            </R_Button>
    </R_StackLayout>

    <R_Conductor @ref="@_UtilityCharges_conductorRef"
                 R_ViewModel="@_viewModel"
                 R_IsHeader="true"
                 R_ServiceGetRecord="@UtilityCharges_ServiceGetRecord">
    </R_Conductor>
</R_StackLayout>
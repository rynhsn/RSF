@inherits R_Page

<R_StackLayout Row>

    <R_ItemLayout col="2">
        <R_RadioGroup R_ConductorSource="@_conductor"
                      Data="@_viewModel.oDataChoose"
                      @bind-Value="@_viewModel.cDataChoosen"
                      OnChanged="FuncRadioGroupChoosenData"
                      R_EnableAdd
                      R_EnableEdit="@false"
                      ValueField="@nameof(PMT01100ComboBoxDTO.CCODE)"
                      TextField="@nameof(PMT01100ComboBoxDTO.CDESCRIPTION)"
                      Layout="R_eRadioGroupLayout.Vertical" />
    </R_ItemLayout>

    <R_ItemLayout col="10" Class="d-flex">

        <R_ItemLayout col="2" Class="d-flex">

            <R_ItemLayout col="9">
                <R_TextBox @bind-Value="@_viewModel.oTempExistingEntity.CTENANT_ID"
                           R_ConductorSource="@_conductor"
                           MaxLength="20"
                           OnLostFocus="@OnLostFocusTenant"
                           @ref="_componentCTENANT_IDTextBox"
                           Enabled="@(!_viewModel.lControlCRUDMode && _viewModel.lControlExistingTenant)">
                </R_TextBox>
            </R_ItemLayout>

            <R_ItemLayout col="3" Class="ps-1">
                <R_Lookup R_ConductorSource="@_conductor"
                          @ref="@R_LookupTenantLookup"
                          Enabled="@(!_viewModel.lControlCRUDMode && _viewModel.lControlExistingTenant)"
                          R_Before_Open_Lookup="@BeforeOpenLookUpTenantLookup"
                          R_After_Open_Lookup="@AfterOpenLookUpTenantLookup">
                    ...
                </R_Lookup>
            </R_ItemLayout>

        </R_ItemLayout>

        <R_ItemLayout col="4" Class="ps-1">

            <R_TextBox @bind-Value="@_viewModel.oTempExistingEntity.CTENANT_NAME"
                       R_ConductorSource="@_conductor"
                       Enabled="false">
            </R_TextBox>

        </R_ItemLayout>

    </R_ItemLayout>

</R_StackLayout>

<R_ItemLayout hidden="@lControlChoosenData">

    <R_StackLayout>

        <R_ItemLayout Class="d-flex" col="12">

            <R_ItemLayout col="1" Class="ps-4">
                <R_Label>
                    @_localizer["_Tenant"]*
                </R_Label>
            </R_ItemLayout>

            <R_ItemLayout col="2">
                <R_TextBox @bind-Value="@_viewModel.Data.CTENANT_ID"
                           R_ConductorSource="@_conductor"
                           MaxLength="20"
                           R_EnableAdd
                           R_EnableEdit />
            </R_ItemLayout>

            <R_ItemLayout col="4" Class="ps-1">

                <R_TextBox @bind-Value="@_viewModel.Data.CTENANT_NAME"
                           R_ConductorSource="@_conductor"
                           R_EnableAdd
                           R_EnableEdit />

            </R_ItemLayout>

            <R_ItemLayout col="5" Class="ps-1 d-flex">

                <R_ItemLayout col="3">
                    <R_Label>
                        @_localizer["_Email"]*
                    </R_Label>
                </R_ItemLayout>

                <R_ItemLayout col="5">
                    <R_TextBox @bind-Value="@_viewModel.Data.CEMAIL"
                               MaxLength="100"
                               R_ConductorSource="@_conductor"
                               R_EnableAdd
                               R_EnableEdit />
                </R_ItemLayout>

            </R_ItemLayout>

        </R_ItemLayout>

        <R_ItemLayout Class="d-flex" col="12">

            <R_ItemLayout col="1" Class="ps-4">
                <R_Label>
                    @_localizer["_Address"]*
                </R_Label>
            </R_ItemLayout>

            <R_ItemLayout col="6">

                <R_TextArea @bind-Value="@_viewModel.Data.CADDRESS"
                            MaxLength="255"
                            R_ConductorSource="@_conductor"
                            R_EnableAdd
                            R_EnableEdit />

            </R_ItemLayout>

            <R_ItemLayout col="5" Class="ps-1">

                <R_ItemLayout col="12" Class="d-flex">

                    <R_ItemLayout col="3">
                        <R_Label>
                            @_localizer["_PhoneNo1"]
                        </R_Label>
                    </R_ItemLayout>

                    <R_ItemLayout col="5">
                        <R_TextBox @bind-Value="@_viewModel.Data.CPHONE1"
                                   MaxLength="30"
                                   R_ConductorSource="@_conductor"
                                   R_EnableAdd
                                   R_EnableEdit />
                    </R_ItemLayout>

                </R_ItemLayout>

                <R_ItemLayout col="12" Class="d-flex pt-1">

                    <R_ItemLayout col="3">
                        <R_Label>
                            @_localizer["_PhoneNo2"]
                        </R_Label>
                    </R_ItemLayout>

                    <R_ItemLayout col="5">
                        <R_TextBox @bind-Value="@_viewModel.Data.CPHONE2"
                                   MaxLength="30"
                                   R_ConductorSource="@_conductor"
                                   R_EnableAdd
                                   R_EnableEdit />
                    </R_ItemLayout>

                </R_ItemLayout>

                <R_ItemLayout col="12" Class="d-flex pt-1">

                    <R_ItemLayout col="3">
                        <R_Label>
                            @_localizer["_TenantCategory"]
                        </R_Label>
                    </R_ItemLayout>

                    <R_ItemLayout col="5">

                        <R_DropDownList Data="@_viewModel.oComboBoxTenantCategory"
                                        @bind-Value="_viewModel.Data.CTENANT_CATEGORY_ID"
                                        ValueField="@nameof(PMT01100ResponseTenantCategoryDTO.CCATEGORY_ID)"
                                        TextField="@nameof(PMT01100ResponseTenantCategoryDTO.CCATEGORY_NAME)"
                                        PopupMaxHeight="200px"
                                        R_ConductorSource="@_conductor"
                                        R_EnableAdd
                                        R_EnableEdit />

                    </R_ItemLayout>

                </R_ItemLayout>

            </R_ItemLayout>

        </R_ItemLayout>

    </R_StackLayout>

    <R_StackLayout Row>

        <R_GroupBox ShowBorder Title="@_localizer["_TaxInfo"]" Class="col-7">

            @* Tax Type *@
            <R_ItemLayout Class="d-flex">

                <R_ItemLayout col="2">

                    <R_Label>
                        @_localizer["_TaxType"]
                    </R_Label>

                </R_ItemLayout>

                <R_ItemLayout col="3">

                    <R_DropDownList Data="@_viewModel.oComboBoxTaxType"
                                    @bind-Value="_viewModel.Data.CTAX_TYPE"
                                    ValueField="@nameof(PMT01100ComboBoxDTO.CCODE)"
                                    TextField="@nameof(PMT01100ComboBoxDTO.CDESCRIPTION)"
                                    PopupMaxHeight="200px"
                                    R_ConductorSource="@_conductor"
                                    R_EnableAdd
                                    R_EnableEdit />
                </R_ItemLayout>

                <R_ItemLayout col="1" />

                <R_ItemLayout col="2">

                    <R_Label>
                        @_localizer["_IdType"]
                    </R_Label>

                </R_ItemLayout>

                <R_ItemLayout col="3">

                    <R_DropDownList Data="@_viewModel.oComboBoxIdType"
                                    @bind-Value="_viewModel.Data.CID_TYPE"
                                    ValueField="@nameof(PMT01100ComboBoxDTO.CCODE)"
                                    TextField="@nameof(PMT01100ComboBoxDTO.CDESCRIPTION)"
                                    PopupMaxHeight="200px"
                                    R_ConductorSource="@_conductor"
                                    R_EnableAdd
                                    R_EnableEdit />
                </R_ItemLayout>

            </R_ItemLayout>

            @* Tax ID *@
            <R_ItemLayout Class="d-flex pt-1">

                <R_ItemLayout col="2">

                    <R_Label>
                        @_localizer["_TaxId"]
                    </R_Label>

                </R_ItemLayout>

                <R_ItemLayout col="4">

                    <R_TextBox @bind-Value="@_viewModel.Data.CTAX_ID"
                               R_ConductorSource="@_conductor"
                               MaxLength="40"
                               R_EnableAdd
                               R_EnableEdit />

                </R_ItemLayout>


                <R_ItemLayout col="2">

                    <R_Label>
                        @_localizer["_IdNumber"]
                    </R_Label>

                </R_ItemLayout>

                <R_ItemLayout col="4">

                    <R_TextBox @bind-Value="@_viewModel.Data.CID_NO"
                               R_ConductorSource="@_conductor"
                               MaxLength="80"
                               R_EnableAdd
                               R_EnableEdit />
                </R_ItemLayout>

            </R_ItemLayout>

            @* Tax Name *@
            <R_ItemLayout Class="d-flex">

                <R_ItemLayout col="2">

                    <R_Label>
                        @_localizer["_TaxName"]
                    </R_Label>

                </R_ItemLayout>

                <R_ItemLayout col="4">

                    <R_TextBox @bind-Value="@_viewModel.Data.CTAX_NAME"
                               R_ConductorSource="@_conductor"
                               MaxLength="100"
                               R_EnableAdd
                               R_EnableEdit />

                </R_ItemLayout>

                <R_ItemLayout col="2">

                    <R_Label>
                        @_localizer["_IdExpiredDate"]
                    </R_Label>

                </R_ItemLayout>

                <R_ItemLayout col="4">

                    <R_DatePicker Value="@_viewModel.Data.DID_EXPIRED_DATE"
                                  R_ConductorSource="@_conductor"
                                  ValueChanged="@((DateTime? value) => OnChangedDID_EXPIRED_DATE(value))"
                                  R_EnableAdd
                                  R_EnableEdit />
                </R_ItemLayout>

            </R_ItemLayout>

            @* Tax Address *@
            <R_ItemLayout Class="d-flex pt-1">

                <R_ItemLayout col="2">

                    <R_Label>
                        @_localizer["_TaxAddress"]
                    </R_Label>

                </R_ItemLayout>

                <R_ItemLayout col="10">

                    <R_TextBox @bind-Value="@_viewModel.Data.CTAX_ADDRESS"
                               R_ConductorSource="@_conductor"
                               MaxLength="255"
                               R_EnableAdd
                               R_EnableEdit />

                </R_ItemLayout>

            </R_ItemLayout>

        </R_GroupBox>

        <R_GroupBox ShowBorder Title="@_localizer["_Attention"]" Class="col-5">

            @* Name *@
            <R_ItemLayout Class="d-flex">

                <R_ItemLayout col="3">

                    <R_Label>
                        @_localizer["_Name"]
                    </R_Label>

                </R_ItemLayout>

                <R_ItemLayout col="5">
                    <R_TextBox @bind-Value="@_viewModel.Data.CATTENTION1_NAME"
                               R_ConductorSource="@_conductor"
                               MaxLength="100"
                               R_EnableAdd
                               R_EnableEdit />
                </R_ItemLayout>

            </R_ItemLayout>

            @* Email *@
            <R_ItemLayout Class="d-flex pt-1">

                <R_ItemLayout col="3">

                    <R_Label>
                        @_localizer["_Email"]
                    </R_Label>

                </R_ItemLayout>

                <R_ItemLayout col="5">
                    <R_TextBox @bind-Value="@_viewModel.Data.CATTENTION1_EMAIL"
                               R_ConductorSource="@_conductor"
                               MaxLength="100"
                               R_EnableAdd
                               R_EnableEdit />
                </R_ItemLayout>

            </R_ItemLayout>

            @* Name *@
            <R_ItemLayout Class="d-flex pt-1">

                <R_ItemLayout col="3">

                    <R_Label>
                        @_localizer["_MobileNo"]
                    </R_Label>

                </R_ItemLayout>

                <R_ItemLayout col="5">
                    <R_TextBox @bind-Value="@_viewModel.Data.CATTENTION1_MOBILE_PHONE1"
                               R_ConductorSource="@_conductor"
                               MaxLength="30"
                               R_EnableAdd
                               R_EnableEdit />
                </R_ItemLayout>

            </R_ItemLayout>

        </R_GroupBox>

    </R_StackLayout>


</R_ItemLayout>

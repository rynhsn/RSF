        </R_ItemLayout>

        @* Booking Fee *@
        <R_ItemLayout col="12" Class="d-flex">

            <R_ItemLayout col="4">

                <R_Label>
                    @_localizer["_BookingFee"]
                </R_Label>

            </R_ItemLayout>

            <R_ItemLayout col="7" Class="pe-1">
                <R_NumericTextBox @bind-Value="@_viewModel.Data.NBOOKING_FEE"

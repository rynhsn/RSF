        <R_ItemLayout Class="pt-5" />

        @* Billing Rule *@
        <R_ItemLayout col="12" Class="d-flex">

            <R_ItemLayout col="4">

                <R_Label>
                    @_localizer["_BillingRule"]
                </R_Label>

            </R_ItemLayout>

            <R_ItemLayout col="7" Class="d-flex">

                <R_ItemLayout col="9">
                    <R_TextBox @bind-Value="@_viewModel.Data.CBILLING_RULE_CODE"

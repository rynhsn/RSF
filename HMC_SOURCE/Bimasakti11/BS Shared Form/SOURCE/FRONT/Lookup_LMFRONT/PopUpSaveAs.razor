@inherits R_Page
@attribute [R_Page(Title = "Save As", ResourceId = "_titleSaveAs")]
@inject R_ILocalizer<Resources_Dummy_Class_LookupPM> _localizer

<R_StackLayout Row>

    <R_ItemLayout>
        <R_Label>
            @_localizer["_labelSaveAs"]
        </R_Label>
    </R_ItemLayout>

    <R_ItemLayout col="4">
        <R_TextBox @bind-Value="@_viewModel.SaveAsParam.CREPORT_FILENAME" />
    </R_ItemLayout>

    <R_ItemLayout col="2">
        <R_ComboBox Data="@_viewModel.FileType"
                    @bind-Value="_viewModel.SaveAsParam.CREPORT_FILETYPE"
                    ValueField="Value"
                    TextField="Text" />
    </R_ItemLayout>

    <R_ItemLayout>
        <R_Button OnClick="@OnClickOk"
                  Enabled="!string.IsNullOrWhiteSpace(_viewModel.SaveAsParam.CREPORT_FILENAME)&&!string.IsNullOrWhiteSpace(_viewModel.SaveAsParam.CREPORT_FILETYPE)">
            @_localizer["_btnSave"]
        </R_Button>
    </R_ItemLayout>

    <R_ItemLayout>
        <R_Button OnClick="@OnClickCancel">
            @_localizer["_btnCancel"]
        </R_Button>
    </R_ItemLayout>

</R_StackLayout>
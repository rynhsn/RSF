@using Lookup_PMCOMMON.DTOs.LML01300;
@inherits R_Page
@attribute [R_Page(Title = "LOI/Agreement")]
@inject R_ILocalizer<Resources_Dummy_Class_LookupPM> _localizer


<R_StackLayout>

    <R_StackLayout Row>
        <R_Grid @ref="@GridRef"
                DataSource="_viewModel.GetList"
                R_ServiceGetListRecord="@R_ServiceGetListRecordAsync"
                R_GridType="@R_eGridType.Navigator"
                Pageable
                @bind-PageSize="@_pageSize"
                Height="300px"
                Width="925px">
            <R_GridColumns>
                <R_GridTextColumn Width="200px"
                                  FieldName="@nameof(LML01300DTO.CREF_NO)"
                                  HeaderText=@_localizer["_refNo"] />
                <R_GridTextColumn Width="200px"
                                  FieldName="@nameof(LML01300DTO.CTRANSACTION_NAME)"
                                  HeaderText=@_localizer["_Type"] />
                <R_GridTextColumn Width="200px"
                                  FieldName="@nameof(LML01300DTO.CTENANT_NAME)"
                                  HeaderText=@_localizer["_Tenant"] />
                <R_GridTextColumn Width="225x"
                                  FieldName="@nameof(LML01300DTO.CUNIT_DESCRIPTION)"
                                  HeaderText=@_localizer["_Unit"] />
            </R_GridColumns>
        </R_Grid>
        </R_StackLayout>

        <R_StackLayout Row Class="justify-content-end">
        <R_ItemLayout xs="2">
            <R_Button OnClick="Button_OnClickOkAsync">
                OK
            </R_Button>
        </R_ItemLayout>
        <R_ItemLayout xs="2">
            <R_Button OnClick="Button_OnClickCloseAsync">
                Cancel
            </R_Button>
        </R_ItemLayout>
    </R_StackLayout>
    </R_StackLayout>
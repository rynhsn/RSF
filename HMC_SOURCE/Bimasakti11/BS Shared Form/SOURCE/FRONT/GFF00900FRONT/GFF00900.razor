@inherits R_Page
@attribute [R_Page(Title = "Activity Approval")]
@using GFF00900COMMON.DTOs

<R_StackLayout Style="width:600px">
    <div hidden="@IsReasonHidden">
        <R_StackLayout>
            <R_StackLayout Row="true">
                <R_ItemLayout Class="col-2">
                    <R_Label>@_localizer["_Reason"]</R_Label>
                </R_ItemLayout>

                <R_ItemLayout Class="col-9">
                    <R_TextArea @bind-Value="@loViewModel.DETAIL_ACTION"
                                @ref="@_reasonRef"
                                R_ConductorSource="@_conductorRef"
                                Enabled="true"></R_TextArea>
                </R_ItemLayout>
            </R_StackLayout>

            <R_StackLayout Row></R_StackLayout>

            <R_StackLayout Row Class="justify-content-start">
                <R_ItemLayout>
                    <R_Button R_ConductorSource="@_conductorRef" OnClick="OnOKReason">@_localizer["_OK"]</R_Button>
                    <R_Button R_ConductorSource="@_conductorRef" OnClick="OnCancelReason">@_localizer["_Cancel"]</R_Button>
                </R_ItemLayout>
            </R_StackLayout>
        </R_StackLayout>
    </div>

    <div hidden="@IsAccessValidationHidden">
        <R_StackLayout>
            <R_StackLayout Row="true">
                <R_ItemLayout Class="col-2">
                    <R_Label>@_localizer["_UserId"]</R_Label>
                </R_ItemLayout>

                <R_ItemLayout Class="col-9">
                    <R_TextBox @bind-Value="@loViewModel.loParameter.USER"
                               @ref="@_userIdRef"
                               R_ConductorSource="@_conductorRef"
                               Enabled="true"></R_TextBox>
                </R_ItemLayout>
            </R_StackLayout>

            <R_StackLayout Row></R_StackLayout>

            <R_StackLayout Row="true">
                <R_ItemLayout Class="col-2">
                    <R_Label>@_localizer["_Password"]</R_Label>
                </R_ItemLayout>

                <R_ItemLayout Class="col-9">
                    <R_TextBox Password @bind-Value="@loViewModel.loParameter.PASSWORD"
                               R_ConductorSource="@_conductorRef"
                               Enabled="true"></R_TextBox>
                </R_ItemLayout>
            </R_StackLayout>

            <R_StackLayout Row></R_StackLayout>

            <R_StackLayout Row Class="justify-content-start">
                <R_ItemLayout>
                    <R_Button R_ConductorSource="@_conductorRef" OnClick="OnOK">@_localizer["_OK"]</R_Button>
                    <R_Button R_ConductorSource="@_conductorRef" OnClick="OnCancel">@_localizer["_Cancel"]</R_Button>
                </R_ItemLayout>
            </R_StackLayout>
        </R_StackLayout>
    </div>
</R_StackLayout>

<R_Conductor @ref="@_conductorRef"
             R_ViewModel="@loViewModel"
             R_IsHeader="true"></R_Conductor>